<%- include('./layouts/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }
        .container {
            width: 80%;
            margin: auto;
            padding: 20px;
            border: 1px solid #000;
            box-shadow: 2px 2px 10px gray;
            background: #fff;
        }
        h2 {
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        .btn-back {
            padding: 10px;
            background: blue;
            color: white;
            text-decoration: none;
            font-size: 16px;
            border-radius: 5px;
        }
        .btn-back:hover {
            background: darkblue;
        }
        .total-revenue {
            font-size: 20px;
            font-weight: bold;
            color: green;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>üìä Inventory Report</h2>

        <h3>üì¶ Inventory Overview</h3>
        <table>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Available Stock</th>
                <th>Total Availed</th>
                <th>Total Price Availed</th>
            </tr>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.quantity %></td>
                    <td><%= totalAvailed[product.name]?.quantity || 0 %></td>
                    <td>‚Ç±<%= totalAvailed[product.name]?.totalPrice.toFixed(2) || "0.00" %></td>
                </tr>
            <% }); %>
        </table>

        <h3>üìù Availed Product Details</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Product</th>
                <th>Quantity Availed</th>
                <th>Address</th>
                <th>Contact</th>
                <th>Date</th>
                <th>Total Price</th>
            </tr>
            <% avails.forEach(avail => { 
                const product = products.find(p => p.name === avail.productName);
                const pricePerUnit = product ? product.price : 0;
                const totalProductPrice = avail.quantity * pricePerUnit;
            %>
                <tr>
                    <td><%= avail.name %></td>
                    <td><%= avail.productName %></td>
                    <td><%= avail.quantity %></td>
                    <td><%= avail.address %></td>
                    <td><%= avail.contact %></td>
                    <td><%= new Date(avail.date).toLocaleString() %></td>
                    <td>‚Ç±<%= totalProductPrice.toFixed(2) %></td>
                </tr>
            <% }); %>
        </table>

        <h3>üí∞ Total Purchases Per Person</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Total Amount Spent</th>
            </tr>
            <% Object.keys(personSpending).forEach(person => { %>
                <tr>
                    <td><%= person %></td>
                    <td>‚Ç±<%= personSpending[person].toFixed(2) %></td>
                </tr>
            <% }); %>
        </table>

        <h3 class="total-revenue">ü§ë Total Revenue: ‚Ç±<%= totalRevenue.toFixed(2) %></h3>

        <a href="/products" class="btn-back">Back to Product List</a>
    </div>

</body>
</html>
