<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Products</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
      color: #333;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      color: #2c3e50;
      margin-bottom: 25px;
      padding-bottom: 15px;
      font-size: 2rem;
      border-bottom: 2px solid #3498db;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 30px;
      background-color: white;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    th {
      background-color: #3498db;
      color: white;
      padding: 15px;
      text-align: left;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.9rem;
      letter-spacing: 0.5px;
    }

    td {
      padding: 15px;
      border-bottom: 1px solid #ecf0f1;
      vertical-align: middle;
    }

    tr:last-child td {
      border-bottom: none;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    tr:hover {
      background-color: #eaf2f8;
      transition: background-color 0.2s ease;
    }

    .product-name {
      font-weight: 500;
      color: #2c3e50;
    }

    .product-price {
      font-weight: 600;
      color: #27ae60;
    }

    .product-quantity {
      font-weight: 500;
    }

    .low-stock {
      color: #e74c3c;
    }

    .actions-cell {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: center;
    }

    button, .btn {
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-weight: 500;
      transition: all 0.2s ease;
      font-size: 0.9rem;
    }

    .btn-edit {
      background-color: #3498db;
      color: white;
      text-decoration: none;
    }

    .btn-edit:hover {
      background-color: #2980b9;
    }

    .btn-delete {
      background-color: #e74c3c;
      color: white;
    }

    .btn-delete:hover {
      background-color: #c0392b;
    }

    .stock-form {
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .stock-input {
      width: 70px;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 0.9rem;
    }

    .btn-add-stock {
      background-color: #2ecc71;
      color: white;
    }

    .btn-add-stock:hover {
      background-color: #27ae60;
    }

    .nav-links {
      display: flex;
      gap: 15px;
      margin-top: 20px;
    }

    .nav-link {
      padding: 10px 15px;
      background-color: #34495e;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.2s ease;
    }

    .nav-link:hover {
      background-color: #2c3e50;
    }

    .nav-link-secondary {
      background-color: #7f8c8d;
    }

    .nav-link-secondary:hover {
      background-color: #6c7a7d;
    }

    @media (max-width: 992px) {
      .actions-cell {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }

      .stock-form {
        flex-wrap: wrap;
      }
    }

    @media (max-width: 768px) {
      table {
        display: block;
        overflow-x: auto;
      }

      .nav-links {
        flex-direction: column;
        gap: 10px;
      }

      .nav-link {
        text-align: center;
      }
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 1.5rem;
      }

      th, td {
        padding: 10px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Manage Products</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th> <!-- ✅ New Column -->
          <th>Price</th>
          <th>Quantity</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(p => { %>
          <tr>
            <td class="product-name"><%= p.name %></td>
            <td><%= p.category || 'Uncategorized' %></td> <!-- ✅ Category Value -->
            <td class="product-price">₱<%= p.price %></td>
            <td class="product-quantity <%= p.quantity < 5 ? 'low-stock' : '' %>"><%= p.quantity %></td>
            <td class="actions-cell">
              <!-- Edit Button -->
              <a href="/edit-product/<%= p._id %>" class="btn btn-edit">Edit</a>

              <!-- Delete Form -->
              <form action="/delete-product/<%= p._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
                <button type="submit" class="btn btn-delete">Delete</button>
              </form>

              <!-- Add Stock Form -->
              <form action="/add-stock/<%= p._id %>" method="POST" class="stock-form">
                <input type="number" name="addQty" min="1" placeholder="Qty" required class="stock-input">
                <button type="submit" class="btn btn-add-stock">Add Stock</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="nav-links">
      <a href="/low-stock" class="nav-link">View Low Stock Products</a>
      <a href="/products/add" class="nav-link nav-link-secondary">Add Product</a>
    </div>
  </div>
</body>
</html>
