<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Troop Members</title>
  <link rel="stylesheet" href="/css/list.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #e5e5e5;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 1200px;
      margin: 50px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    h1 {
      font-size: 2.8rem;
      color: #2C6B44;
      text-align: center;
      margin-bottom: 40px;
      font-weight: bold;
    }
    .btn {
      margin: 10px;
      border-radius: 5px;
    }
    .table-container {
      overflow-x: auto;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }
    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 2px solid #ddd;
    }
    th {
      background-color: #2C6B44;
      color: white;
      font-weight: bold;
      text-transform: uppercase;
    }
    td {
      background-color: #fafafa;
      color: #333;
    }
    td:hover {
      background-color: #f1f1f1;
      transition: background-color 0.3s;
    }
    .btn-edit, .btn-danger {
      padding: 8px 16px;
      margin: 5px 0;
      font-size: 14px;
      border-radius: 5px;
    }
    .btn-primary {
      background-color: #2C6B44;
      color: white;
    }
    .btn-primary:hover {
      background-color: #218F3B;
    }
    .btn-danger {
      background-color: #dc3545;
      color: white;
    }
    .btn-danger:hover {
      background-color: #c82333;
    }
    .btn-cancel {
      background-color: #6c757d;
      color: white;
    }
    .btn-cancel:hover {
      background-color: #5a6268;
    }
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
      transition: all 0.3s ease-in-out;
    }
    .modal-content {
      background-color: white;
      padding: 30px;
      border-radius: 8px;
      width: 50%;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    .modal input, .modal select {
      width: 100%;
      padding: 14px;
      margin: 10px 0;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 16px;
    }
    .modal button {
      width: 100%;
      padding: 14px;
      font-size: 16px;
      cursor: pointer;
      border-radius: 5px;
    }
    .modal h3 {
      font-size: 1.8rem;
      color: #2C6B44;
      margin-bottom: 20px;
    }
    @media (max-width: 768px) {
      .container {
        width: 90%;
      }
      .modal-content {
        width: 80%;
      }
      h1 {
        font-size: 2rem;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Troop Members</h1>
    <a href="/troopmembers/add" class="btn btn-primary">Add New Member</a>

    <div class="table-container">
      <table class="members-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Birthday</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Guardian</th>
            <th>Guardian Contact</th>
            <th>Troop #</th>
            <th>District</th>
            <th>School</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% members.forEach(m => { %>
            <tr>
              <td><%= m.name %></td>
              <td><%= m.dateOfBirth.toDateString() %></td>
              <td><%= m.address %></td>
              <td><%= m.contactNumber %></td>
              <td><%= m.guardianName %></td>
              <td><%= m.guardianContact %></td>
              <td><%= m.troopNumber %></td>
              <td><%= m.district?.name %></td>
              <td><%= m.school %></td>
              <td>
                <button class="btn btn-edit" onclick="openEditModal('<%= m._id %>')">Edit</button>
                <form action="/troopmembers/delete/<%= m._id %>" method="POST" class="delete-form">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this member?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal -->
  <div id="editModal" class="modal">
    <div class="modal-content">
      <h3>Edit Troop Member</h3>
      <form id="editForm" method="POST">
        <input type="hidden" id="editId">
        <input name="name" id="editName" required class="input-field" placeholder="Name"><br>
        <input type="date" name="dateOfBirth" id="editDob" required class="input-field"><br>
        <input name="address" id="editAddress" required class="input-field" placeholder="Address"><br>
        <input name="contactNumber" id="editContact" required class="input-field" placeholder="Contact Number"><br>
        <input name="guardianName" id="editGuardianName" required class="input-field" placeholder="Guardian Name"><br>
        <input name="guardianContact" id="editGuardianContact" required class="input-field" placeholder="Guardian Contact"><br>
        <input name="troopNumber" id="editTroop" required class="input-field" placeholder="Troop Number"><br>
        <select name="district" id="editDistrict" required class="input-field">
          <% districts.forEach(d => { %>
            <option value="<%= d._id %>"><%= d.name %></option>
          <% }) %>
        </select><br>
        <input name="school" id="editSchool" required class="input-field" placeholder="School"><br><br>
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" class="btn btn-cancel" onclick="closeModal()">Cancel</button>
      </form>
    </div>
  </div>

  <script>
    function openEditModal(id) {
      fetch(`/troopmembers/api/${id}`)
        .then(res => res.json())
        .then(member => {
          document.getElementById('editForm').action = `/troopmembers/edit/${member._id}`;
          document.getElementById('editName').value = member.name;
          document.getElementById('editDob').value = member.dateOfBirth.slice(0, 10);
          document.getElementById('editAddress').value = member.address;
          document.getElementById('editContact').value = member.contactNumber;
          document.getElementById('editGuardianName').value = member.guardianName;
          document.getElementById('editGuardianContact').value = member.guardianContact;
          document.getElementById('editTroop').value = member.troopNumber;
          document.getElementById('editDistrict').value = member.district;
          document.getElementById('editSchool').value = member.school;

          document.getElementById('editModal').style.display = 'flex';
          document.getElementById('editModal').classList.add('show');
        });
    }

    function closeModal() {
      document.getElementById('editModal').classList.remove('show');
      setTimeout(() => {
        document.getElementById('editModal').style.display = 'none';
      }, 300);
    }
  </script>

</body>
</html>
