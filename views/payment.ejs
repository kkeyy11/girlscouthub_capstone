<%- include('./layouts/navbar') %>
<main class="container text-center">
  <h3 class="mb-3">Payment</h3>
  <h5>Total Due: ₱<%= total %></h5>

  <!-- Cash Input Only -->
  <div class="mb-3" style="max-width:300px; margin:auto;">
    <input type="number" id="cash" name="cash" class="form-control mb-2" placeholder="Enter Cash" required min="0" step="0.01">
  </div>

  <form method="POST" action="/pos/pay" onsubmit="return checkCash()">
    <button class="btn btn-primary w-100">PAY</button>
  </form>

  <button onclick="history.back()" class="btn btn-link mt-3">← Back</button>
</main>

<!-- INSUFFICIENT MODAL -->
<div class="modal fade" id="cashModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body text-center">
        <h5>Insufficient Payment</h5>
        <p>Cash is less than total amount.</p>
        <button class="btn btn-danger" data-bs-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

<script>
const totalAmount = <%= total %>;

function checkCash(){
  const cash = parseFloat(document.getElementById('cash').value);
  if(isNaN(cash) || cash < totalAmount){
    new bootstrap.Modal(document.getElementById('cashModal')).show();
    return false;
  }
  return true;
}
</script>
