<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css" rel="stylesheet">

<style>
:root {
  --primary: #059669;
  --primary-light: #10b981;
  --primary-dark: #047857;
  --secondary: #34d399;
  --accent: #6ee7b7;
  --text: #1f2937;
  --text-light: #6b7280;
  --white: #ffffff;
}

/* Page Title */
.page-title {
  font-size: 1.8rem;
  font-weight: 700;
  background: linear-gradient(135deg, var(--primary), var(--primary-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 0.5rem;
}

/* Form & Cards */
.card {
  border-radius: 12px;
  box-shadow: 0 6px 18px rgba(0,0,0,0.06);
  transition: transform 0.2s;
}
.card:hover { transform: translateY(-2px); }

.form-control, .form-select {
  border-radius: 8px;
  border: 1px solid #d1d5db;
  padding-left: 2rem;
  transition: all 0.3s;
}
.form-control:focus, .form-select:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 0.2rem rgba(5,150,105,0.25);
}

/* Layout */
main.container-fluid {
  margin-left: 220px;
  padding-top: 80px;
  background-color: #fefbfb;
  min-height: 100vh;
}

.row.g-4 {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: flex-start;
}

.col-xl-3, .col-lg-4, .col-md-6 { min-width: 260px; }

/* Flashcards */
.card.flashcard {
  width: 100%;
  max-width: 220px;
  height: 220px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0.5rem;
}
.card.flashcard img {
  width: 100%;
  height: 50%;
  object-fit: cover;
  border-radius: 8px;
}
.card.flashcard h5 {
  font-size: 1rem;
  margin: 0.25rem 0;
}
.card.flashcard small {
  font-size: 0.75rem;
  color: var(--text-light);
}

/* Calendar */
#calendar {
  background-color: #fff;
  border-radius: 12px;
  padding: 10px;
  box-shadow: 0 6px 18px rgba(0,0,0,0.05);
  font-family: 'Inter', sans-serif;
}
.fc {
  --fc-border-color: #e5e7eb;
  --fc-event-bg-color: var(--primary);
  --fc-event-border-color: var(--primary-dark);
  --fc-event-text-color: #fff;
}
.fc .fc-daygrid-day-number {
  font-weight: 500;
  color: var(--text);
}
.fc .fc-daygrid-day:hover {
  background-color: #f0fdf4;
  cursor: default;
}
.fc .fc-daygrid-event {
  border-radius: 6px;
  font-size: 0.8rem;
  padding: 2px 4px;
}
.fc .fc-button {
  background-color: var(--primary);
  border: none;
  color: #fff;
  border-radius: 6px;
  font-size: 0.85rem;
}
.fc .fc-button:hover { background-color: var(--primary-dark); }

/* Modal Events */
.modal-body .card { margin-bottom: 0.8rem; }

@media (max-width: 1200px) {
  main.container-fluid { margin-left: 0; padding-top: 100px; }
  .row.g-4 { justify-content: center; }
  #calendar { max-height: 400px; }
}
</style>

<main class="container-fluid">
  <div class="row g-4">

    <!-- FORM -->
    <div class="col-xl-3 col-lg-4 col-md-6">
      <div class="card p-3">
        <h2 class="page-title">Create / Edit Event</h2>
        <form action="/admin/event" method="POST" enctype="multipart/form-data" id="eventForm">
          <input type="hidden" name="id" id="eventId">

          <input class="form-control mb-2" name="title" id="title" placeholder="Title" required>
          <textarea class="form-control mb-2" name="description" id="description" placeholder="Description" rows="2" required></textarea>
          <input type="date" class="form-control mb-2" name="date" id="date" required>
          <input type="time" class="form-control mb-2" name="time" id="time" required>
          <input type="date" class="form-control mb-2" name="endDate" id="endDate" required>
          <input type="time" class="form-control mb-2" name="endTime" id="endTime" required>
          <input class="form-control mb-2" name="location" id="location" placeholder="Location" required>

          <input type="file" class="form-control mb-2" name="image">

          <button class="btn btn-success w-100" id="submitBtn">Create Event</button>
        </form>
      </div>
    </div>

    <!-- CALENDAR -->
    <div class="col-xl-4 col-lg-4 col-md-6">
      <div class="card p-2">
        <div id="calendar"></div>
      </div>
    </div>

    <!-- FLASHCARDS -->
    <div class="col-xl-3 col-lg-4 col-md-6 d-flex flex-wrap justify-content-start gap-2">
      <% events.slice(0,3).forEach(event => { %>
        <div class="card flashcard">
          <% if (event.image) { %>
            <img src="/uploads/events/<%= event.image %>" alt="<%= event.title %>">
          <% } else { %>
            <img src="/images/placeholder.png" alt="No Image">
          <% } %>
          <div>
            <h5><%= event.title %></h5>
            <small><%= event.date.toDateString() %> • <%= event.time %> - <%= event.endTime %></small>
          </div>
          <div class="d-flex gap-1 mt-1">
            <button class="btn btn-sm btn-outline-primary"
              onclick="editEvent(
                '<%= event._id %>',
                '<%= event.title %>',
                '<%= event.description %>',
                '<%= event.date.toISOString().split('T')[0] %>',
                '<%= event.time %>',
                '<%= event.endDate ? event.endDate.toISOString().split('T')[0] : '' %>',
                '<%= event.endTime || '' %>',
                '<%= event.location %>'
              )">Edit</button>
            <form action="/admin/event/delete/<%= event._id %>" method="POST">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
      <% if (events.length > 3) { %>
        <button class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#allEventsModal">View All Events</button>
      <% } %>
    </div>

  </div>
</main>

<!-- Modal All Events -->
<div class="modal fade" id="allEventsModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">All Events</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <% events.slice(3).forEach(event => { %>
          <div class="card flashcard">
            <% if (event.image) { %>
              <img src="/uploads/events/<%= event.image %>" alt="<%= event.title %>">
            <% } else { %>
              <img src="/images/placeholder.png" alt="No Image">
            <% } %>
            <div>
              <h5><%= event.title %></h5>
              <small><%= event.date.toDateString() %> • <%= event.time %> - <%= event.endTime %></small>
            </div>
            <div class="d-flex gap-1 mt-1">
              <button class="btn btn-sm btn-outline-primary"
                onclick="editEvent(
                  '<%= event._id %>',
                  '<%= event.title %>',
                  '<%= event.description %>',
                  '<%= event.date.toISOString().split('T')[0] %>',
                  '<%= event.time %>',
                  '<%= event.endDate ? event.endDate.toISOString().split('T')[0] : '' %>',
                  '<%= event.endTime || '' %>',
                  '<%= event.location %>'
                )">Edit</button>
              <form action="/admin/event/delete/<%= event._id %>" method="POST">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>

<script>
document.getElementById('eventForm').addEventListener('submit', function() {
  const btn = document.getElementById('submitBtn');
  btn.disabled = true;
  btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Creating...';
});

function editEvent(id, title, description, date, time, endDate, endTime, location) {
  const form = document.getElementById('eventForm');
  form.action = `/admin/event/${id}`;
  document.getElementById('submitBtn').innerText = 'Update Event';

  document.getElementById('title').value = title || '';
  document.getElementById('description').value = description || '';
  document.getElementById('date').value = date || '';
  document.getElementById('time').value = time || '';
  document.getElementById('endDate').value = endDate || '';
  document.getElementById('endTime').value = endTime || '';
  document.getElementById('location').value = location || '';
}

document.addEventListener('DOMContentLoaded', function () {
  const calendarEl = document.getElementById('calendar');
  if (calendarEl) {
    const calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      height: 'auto',
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,timeGridWeek,timeGridDay'
      },
      events: [
        <% events.forEach(e => { %>
          {
            title: "<%= e.title %>",
            start: "<%= e.date.toISOString() %>",
            end: "<%= e.endDate ? e.endDate.toISOString() : e.date.toISOString() %>"
          },
        <% }) %>
      ]
    });
    calendar.render();
  }
});
</script>

<%- include('./layouts/footer') %>
