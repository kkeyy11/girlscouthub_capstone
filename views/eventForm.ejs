<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<!-- ✅ Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
:root {
  --primary: #059669;
  --primary-light: #10b981;
  --primary-dark: #047857;
  --secondary: #34d399;
  --accent: #6ee7b7;
  --text: #1f2937;
  --text-light: #6b7280;
  --white: #ffffff;
}

/* Page Header */
.page-title {
  font-size: 2.25rem;
  font-weight: 700;
  background: linear-gradient(135deg, var(--primary), var(--primary-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.page-subtitle {
  color: var(--text-light);
  font-size: 1rem;
}

/* Success Message */
.success-message {
  background: rgba(5, 150, 105, 0.1);
  border-left: 4px solid var(--primary);
  color: var(--primary);
  padding: 12px 16px;
  border-radius: 6px;
  display: none;
  font-weight: 500;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
.success-message.show { display: block; }

/* Card Styling */
.card {
  border-radius: 12px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.05);
  transition: transform 0.2s;
}
.card:hover {
  transform: translateY(-4px);
}

/* Input Enhancements */
.form-control, .form-select {
  border-radius: 8px;
  border: 1px solid #d1d5db;
  padding-left: 2.5rem;
  transition: all 0.3s;
}
.form-control:focus, .form-select:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 0.2rem rgba(5,150,105,0.25);
}
.input-icon {
  position: absolute;
  top: 50%;
  left: 0.75rem;
  transform: translateY(-50%);
  color: var(--primary);
}

/* Responsive Form */
@media (max-width: 576px) {
  .form-floating > .input-icon { left: 0.5rem; }
  .page-title { font-size: 1.75rem; }
}
</style>

<main class="container py-5">
  <!-- Header -->
  <div class="text-center mb-5">
    <h1 class="page-title">
      <i class="fas fa-bullhorn"></i>  Announcements
    </h1>
    <p class="page-subtitle">Create and share important events with your troop</p>
  </div>

  <!-- Success Message -->
  <div id="successMessage" class="success-message mb-4">
    <i class="fas fa-check-circle me-2"></i> Event created successfully!
  </div>

  <!-- Form Container -->
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body p-4">
      <form action="/admin/event" method="POST" id="eventForm" class="position-relative">

        <!-- Event Title -->
        <div class="mb-4 position-relative">
          <i class="fas fa-heading input-icon"></i>
          <input type="text" name="title" class="form-control ps-5" placeholder="Event Title" required maxlength="100">
        </div>

        <!-- Description -->
        <div class="mb-4 position-relative">
          <i class="fas fa-align-left input-icon"></i>
          <textarea name="description" class="form-control ps-5" rows="4" placeholder="Event Description" maxlength="500" required></textarea>
        </div>

        <!-- Date & Time -->
        <div class="row mb-4">
          <div class="col-md-6 position-relative mb-3 mb-md-0">
            <i class="fas fa-calendar-alt input-icon"></i>
            <input type="date" name="date" class="form-control ps-5" min="<%= new Date().toISOString().split('T')[0] %>" required>
          </div>
          <div class="col-md-6 position-relative">
            <i class="fas fa-clock input-icon"></i>
            <input type="time" name="time" class="form-control ps-5" required>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-4 position-relative">
          <i class="fas fa-map-marker-alt input-icon"></i>
          <input type="text" name="location" class="form-control ps-5" placeholder="Event Location" maxlength="100" required>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-success w-100 py-2" id="submitBtn">
          <i class="fas fa-paper-plane me-2"></i> Create Announcement
        </button>

      </form>
    </div>
  </div>
</main>

<!-- ✅ Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
// Form submission with loading state
document.getElementById('eventForm').addEventListener('submit', function(e) {
  const submitBtn = document.getElementById('submitBtn');
  submitBtn.disabled = true;
  submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Creating...';
});

// Show success message
function showSuccessMessage() {
  const msg = document.getElementById('successMessage');
  msg.classList.add('show');
  setTimeout(() => msg.classList.remove('show'), 4000);
}
</script>

