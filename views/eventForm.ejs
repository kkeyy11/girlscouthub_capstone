<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css" rel="stylesheet">

<style>
:root {
  --primary: #059669;
  --primary-light: #10b981;
  --primary-dark: #047857;
  --text: #1f2937;
  --text-light: #6b7280;
  --white: #ffffff;
  --border: #e5e7eb;
}

/* Compact Form */
.card {
  border-radius: 8px;
  border: 1px solid var(--border);
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}

.page-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 0.75rem;
}

/* Reduced form input sizes for compact layout */
.form-control, .form-select {
  border-radius: 6px;
  border: 1px solid var(--border);
  font-size: 0.9rem;
  padding: 0.5rem;
  transition: all 0.2s;
}

.form-control:focus, .form-select:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 2px rgba(5,150,105,0.1);
}

.form-control::placeholder {
  color: var(--text-light);
  font-size: 0.85rem;
}

/* Compact layout with reduced spacing */
main.container-fluid {
  margin-left: 220px;
  padding-top: 60px;
  padding: 1rem;
  background-color: #fafafa;
  min-height: 100vh;
}

.row.g-3 {
  gap: 1rem;
}

.col-form {
  flex: 0 0 auto;
  width: 280px;
}

.col-calendar {
  flex: 1 1 400px;
  min-width: 350px;
}

.col-events {
  flex: 0 0 auto;
  width: 320px;
}

/* Improved calendar styling with better button contrast */
#calendar {
  font-size: 0.85rem;
}

.fc {
  --fc-border-color: var(--border);
  --fc-event-bg-color: var(--primary);
  --fc-event-border-color: var(--primary-dark);
  --fc-event-text-color: #fff;
  --fc-today-bg-color: rgba(16, 185, 129, 0.08);
}

.fc .fc-button-primary {
  background-color: var(--primary);
  border-color: var(--primary);
  color: #fff;
  font-size: 0.75rem;
  padding: 0.4rem 0.6rem;
}

/* Fixed hover states for better readability */
.fc .fc-button-primary:hover {
  background-color: var(--primary-dark);
  border-color: var(--primary-dark);
}

.fc .fc-button-primary.fc-button-active {
  background-color: var(--primary-dark);
  border-color: var(--primary-dark);
}

.fc .fc-daygrid-day-number {
  font-weight: 500;
  font-size: 0.8rem;
  padding: 4px 2px;
}

.fc .fc-daygrid-event {
  border-radius: 3px;
  font-size: 0.7rem;
  padding: 2px 3px;
  margin-bottom: 1px;
}

.fc .fc-col-header-cell {
  font-size: 0.8rem;
  padding: 6px 0;
  font-weight: 600;
}

.fc .fc-daygrid-day {
  padding: 4px 2px;
}

/* Compact event cards */
.event-card {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 0.75rem;
  margin-bottom: 0.75rem;
  border-radius: 8px;
  border: 1px solid var(--border);
  background: var(--white);
}

.event-card img {
  width: 100%;
  height: 120px;
  object-fit: cover;
  border-radius: 6px;
}

.event-card h5 {
  font-size: 0.9rem;
  font-weight: 600;
  margin: 0;
  color: var(--text);
}

.event-card small {
  font-size: 0.75rem;
  color: var(--text-light);
}

.event-card .btn {
  font-size: 0.8rem;
  padding: 0.4rem 0.6rem;
}

.event-buttons {
  display: flex;
  gap: 0.5rem;
}

.btn-primary-outline {
  background: transparent;
  border: 1px solid var(--primary);
  color: var(--primary);
  border-radius: 4px;
  padding: 0.4rem 0.8rem;
  font-size: 0.8rem;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-primary-outline:hover {
  background: var(--primary);
  color: #fff;
}

.btn-danger-outline {
  background: transparent;
  border: 1px solid #dc3545;
  color: #dc3545;
  border-radius: 4px;
  padding: 0.4rem 0.8rem;
  font-size: 0.8rem;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-danger-outline:hover {
  background: #dc3545;
  color: #fff;
}

.btn-success {
  background: var(--primary);
  border: none;
  color: #fff;
  border-radius: 6px;
  padding: 0.6rem;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-success:hover {
  background: var(--primary-dark);
}

.btn-success:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.view-all-btn {
  width: 100%;
  padding: 0.6rem;
  margin-top: 0.5rem;
  background: var(--primary);
  color: #fff;
  border: none;
  border-radius: 6px;
  font-size: 0.9rem;
  cursor: pointer;
}

.view-all-btn:hover {
  background: var(--primary-dark);
}

@media (max-width: 1400px) {
  main.container-fluid {
    margin-left: 0;
    padding-top: 80px;
  }
  
  .row.g-3 {
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .col-form, .col-calendar, .col-events {
    width: 100%;
  }
}
</style>

<main class="container-fluid">
  <div class="row g-3">

    <!-- FORM -->
    <div class="col-form">
      <div class="card p-2">
        <h2 class="page-title">Create / Edit Event</h2>
        <form action="/admin/event" method="POST" enctype="multipart/form-data" id="eventForm">
          <input type="hidden" name="id" id="eventId">

          <input class="form-control mb-2" name="title" id="title" placeholder="Title" required>
          <textarea class="form-control mb-2" name="description" id="description" placeholder="Description" rows="2" required></textarea>
          <input type="date" class="form-control mb-2" name="date" id="date" required>
          <input type="time" class="form-control mb-2" name="time" id="time" required>
          <input type="date" class="form-control mb-2" name="endDate" id="endDate" required>
          <input type="time" class="form-control mb-2" name="endTime" id="endTime" required>
          <input class="form-control mb-2" name="location" id="location" placeholder="Location" required>

          <input type="file" class="form-control mb-2" name="image" style="padding: 0.4rem;">

          <button class="btn-success w-100" id="submitBtn">Create Event</button>
        </form>
      </div>
    </div>

    <!-- CALENDAR -->
    <div class="col-calendar">
      <div class="card p-2">
        <div id="calendar"></div>
      </div>
    </div>

    <!-- EVENT CARDS -->
    <div class="col-events">
      <div class="card p-2">
        <h2 class="page-title">Recent Events</h2>
        <div style="max-height: 600px; overflow-y: auto;">
          <% events.slice(0,3).forEach(event => { %>
            <div class="event-card">
              <% if (event.image) { %>
                <img src="/uploads/events/<%= event.image %>" alt="<%= event.title %>">
              <% } else { %>
                <img src="/images/placeholder.png" alt="No Image">
              <% } %>
              <h5><%= event.title %></h5>
              <small><%= event.date.toDateString() %> • <%= event.time %></small>
              <div class="event-buttons">
                <button class="btn-primary-outline" onclick="editEvent(
                  '<%= event._id %>',
                  '<%= event.title %>',
                  '<%= event.description %>',
                  '<%= event.date.toISOString().split('T')[0] %>',
                  '<%= event.time %>',
                  '<%= event.endDate ? event.endDate.toISOString().split('T')[0] : '' %>',
                  '<%= event.endTime || '' %>',
                  '<%= event.location %>'
                )">Edit</button>
                <form action="/admin/event/delete/<%= event._id %>" method="POST" style="margin: 0;">
                  <button type="submit" class="btn-danger-outline" style="width: 100%;">Delete</button>
                </form>
              </div>
            </div>
          <% }) %>
          <% if (events.length > 3) { %>
            <button class="view-all-btn" data-bs-toggle="modal" data-bs-target="#allEventsModal">View All Events</button>
          <% } %>
        </div>
      </div>
    </div>

  </div>
</main>

<!-- Modal All Events -->
<div class="modal fade" id="allEventsModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">All Events</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <% events.slice(3).forEach(event => { %>
          <div class="event-card">
            <% if (event.image) { %>
              <img src="/uploads/events/<%= event.image %>" alt="<%= event.title %>">
            <% } else { %>
              <img src="/images/placeholder.png" alt="No Image">
            <% } %>
            <h5><%= event.title %></h5>
            <small><%= event.date.toDateString() %> • <%= event.time %></small>
            <div class="event-buttons">
              <button class="btn-primary-outline" onclick="editEvent(
                '<%= event._id %>',
                '<%= event.title %>',
                '<%= event.description %>',
                '<%= event.date.toISOString().split('T')[0] %>',
                '<%= event.time %>',
                '<%= event.endDate ? event.endDate.toISOString().split('T')[0] : '' %>',
                '<%= event.endTime || '' %>',
                '<%= event.location %>'
              )">Edit</button>
              <form action="/admin/event/delete/<%= event._id %>" method="POST" style="margin: 0;">
                <button type="submit" class="btn-danger-outline" style="width: 100%;">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>

<script>
document.getElementById('eventForm').addEventListener('submit', function() {
  const btn = document.getElementById('submitBtn');
  btn.disabled = true;
  btn.innerHTML = '⏳ Creating...';
});

function editEvent(id, title, description, date, time, endDate, endTime, location) {
  const form = document.getElementById('eventForm');
  form.action = `/admin/event/${id}`;
  document.getElementById('submitBtn').innerText = 'Update Event';

  document.getElementById('title').value = title || '';
  document.getElementById('description').value = description || '';
  document.getElementById('date').value = date || '';
  document.getElementById('time').value = time || '';
  document.getElementById('endDate').value = endDate || '';
  document.getElementById('endTime').value = endTime || '';
  document.getElementById('location').value = location || '';
}

document.addEventListener('DOMContentLoaded', function () {
  const calendarEl = document.getElementById('calendar');
  if (calendarEl) {
    const calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      height: 'auto',
      contentHeight: 'auto',
      headerToolbar: {
        left: 'prev,next',
        center: 'title',
        right: 'dayGridMonth,timeGridWeek,timeGridDay'
      },
      events: [
        <% events.forEach(e => { %>
          {
            title: "<%= e.title %>",
            start: "<%= e.date.toISOString() %>",
            end: "<%= e.endDate ? e.endDate.toISOString() : e.date.toISOString() %>"
          },
        <% }) %>
      ]
    });
    calendar.render();
  }
});
</script>

