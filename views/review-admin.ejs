<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<style>
:root {
  --primary: #059669;
  --primary-light: #10b981;
  --secondary: #34d399;
  --accent: #6ee7b7;
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;
  --white: #ffffff;
  --radius: 14px;
  --shadow: 0 4px 20px rgba(0,0,0,0.06);
}

body {
  font-family: 'Inter', sans-serif;
  background: linear-gradient(135deg, #e6fff2, #f9fffc);
  color: var(--gray-800);
  padding-top: 90px;
}

/* ðŸŒŸ Main Container */
.admin-review-container {
  padding: 30px;
  width: 100%;
  max-width: 1050px; /* slightly bigger */
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 35px;
  align-items: center;
}

/* ðŸŒŸ Heading */
h1 {
  font-weight: 800;
  font-size: 2.4rem; /* slightly bigger */
  color: var(--gray-900);
  display: flex;
  align-items: center;
  gap: 12px;
  justify-content: center;
  margin-bottom: 10px;
}
h1 i { color: var(--primary); }

/* ðŸŒŸ Stats Cards */
.stats-summary {
  display: flex;
  flex-wrap: wrap;
  gap: 25px;
  justify-content: center;
}
.stat-card {
  background: var(--white);
  padding: 25px; /* slightly bigger */
  border-radius: var(--radius);
  text-align: center;
  box-shadow: var(--shadow);
  transition: transform 0.2s;
  min-width: 160px; /* slightly bigger */
}
.stat-card:hover { transform: translateY(-3px); }
.stat-number { font-weight: 700; font-size: 1.9rem; color: var(--primary); }
.stat-label { font-size: 1rem; color: var(--gray-500); margin-top: 6px; }

/* ðŸŒŸ Analytics */
.analytics-container {
  background: var(--white);
  padding: 20px;
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  gap: 15px; /* smaller gap for smaller container */
  position: relative;
  width: 90%; /* smaller than before */
  max-width: 700px; /* limit analytics container */
}
.analytics-title {
  font-weight: 700;
  font-size: 1.2rem;
  color: var(--primary);
  display: flex;
  align-items: center;
  gap: 12px;
}
.analytics-title i { color: var(--primary-light); }

.circular-charts-container {
  display: flex;
  justify-content: center;
  gap: 15px;
  flex-wrap: wrap;
}

.circular-chart {
  position: relative;
  width: 80px; /* smaller */
  height: 80px; /* smaller */
}
.circular-chart canvas { position: absolute; top:0; left:0; }
.circular-chart .percent-text {
  position: absolute; top:50%; left:50%;
  transform: translate(-50%,-50%);
  font-weight: 700; font-size: 0.85rem; /* smaller text */
}
.circular-chart .chart-label {
  position: absolute; width: 100%;
  bottom: -18px; text-align: center;
  font-size: 0.75rem; color: var(--gray-500);
  font-weight: 600;
}

.analytics-filter {
  position: absolute;
  top: 15px;
  right: 20px;
  display: flex;
  gap: 8px;
}
.analytics-filter select,
.analytics-filter input {
  padding: 5px 8px;
  border-radius: var(--radius);
  border: 1px solid var(--gray-300);
  font-size: 0.8rem;
}

/* ðŸŒŸ Filter Buttons */
.filter-buttons {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
  justify-content: center;
}
.filter-buttons button {
  padding: 7px 16px; /* slightly bigger */
  border-radius: var(--radius);
  border: none;
  font-weight: 600;
  cursor: pointer;
  transition: 0.2s;
}
.filter-buttons button:hover { opacity: 0.9; transform: translateY(-1px); }
.filter-all { background: var(--gray-200); color: var(--gray-700); }
.filter-positive { background: #d1fae5; color: var(--primary); }
.filter-neutral { background: #fef3c7; color: #f59e0b; }
.filter-negative { background: #fee2e2; color: #dc2626; }
.filter-buttons .active { box-shadow: 0 2px 8px rgba(0,0,0,0.1); }

/* ðŸŒŸ Reviews Table */
.admin-review-list {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 14px;
  padding: 0;
  width: 100%;
  max-width: 750px; /* slightly bigger */
  margin: 0 auto;
}
.review-card {
  padding: 18px; /* slightly bigger */
  border-radius: var(--radius);
  background: var(--white);
  box-shadow: var(--shadow);
  border-left: 5px solid transparent;
  width: 100%;
  box-sizing: border-box;
}
.review-positive { border-color: #10b981; }
.review-neutral { border-color: #f59e0b; }
.review-negative { border-color: #dc2626; }

.sentiment-badge {
  display: inline-block;
  padding: 4px 9px;
  border-radius: var(--radius);
  font-size: 0.8rem;
  font-weight: 600;
  margin-bottom: 6px;
}
.review-positive .sentiment-badge { background: #ecfdf5; color: #059669; }
.review-neutral .sentiment-badge { background: #fffbeb; color: #b45309; }
.review-negative .sentiment-badge { background: #fef2f2; color: #b91c1c; }

.review-message { font-size: 1rem; margin-bottom: 8px; }
.review-meta { display: flex; justify-content: space-between; font-size: 0.85rem; color: var(--gray-500); }

.empty-state {
  text-align: center;
  background: var(--white);
  padding: 35px; /* slightly bigger */
  border-radius: var(--radius);
  box-shadow: var(--shadow);
}
.empty-state h3 { font-weight: 700; margin-bottom: 5px; font-size: 1.2rem; }
.empty-state p { color: var(--gray-500); font-size: 0.95rem; }

/* ðŸŒŸ Responsive Adjustments */
@media (max-width: 992px) {
  .analytics-container { flex-direction: column; align-items: center; gap: 15px; }
  .circular-charts-container { justify-content: center; }
  .stats-summary { justify-content: center; }
  .filter-buttons { justify-content: center; }
}
</style>

<div class="admin-review-container">
  <h1><i class="fas fa-tachometer-alt"></i> Dashboard Sentiment</h1>

  <div class="stats-summary">
    <div class="stat-card">
      <div class="stat-number"><%= reviews.filter(r => r.sentiment.toLowerCase() === 'positive').length %></div>
      <div class="stat-label">Positive</div>
    </div>
    <div class="stat-card">
      <div class="stat-number"><%= reviews.filter(r => r.sentiment.toLowerCase() === 'neutral').length %></div>
      <div class="stat-label">Neutral</div>
    </div>
    <div class="stat-card">
      <div class="stat-number"><%= reviews.filter(r => r.sentiment.toLowerCase() === 'negative').length %></div>
      <div class="stat-label">Negative</div>
    </div>
    <div class="stat-card">
      <div class="stat-number"><%= reviews.length %></div>
      <div class="stat-label">Total</div>
    </div>
  </div>

  <div class="analytics-container">
    <div class="analytics-title"><i class="fas fa-chart-pie"></i> Analytics</div>
    <div class="circular-charts-container">
      <div class="analytics-filter">
        <select id="analytics-period">
          <option value="today">Today</option>
          <option value="month">Month</option>
          <option value="year">Year</option>
        </select>
        <input type="date" id="date-filter" style="display:none;">
        <input type="month" id="month-filter" style="display:none;">
        <input type="number" id="year-filter" style="display:none;" placeholder="YYYY" min="2000" max="2100">
      </div>
      <div class="circular-chart">
        <canvas id="chart-positive"></canvas>
        <div class="percent-text" id="percent-positive">0%</div>
        <div class="chart-label">Positive</div>
      </div>
      <div class="circular-chart">
        <canvas id="chart-neutral"></canvas>
        <div class="percent-text" id="percent-neutral">0%</div>
        <div class="chart-label">Neutral</div>
      </div>
      <div class="circular-chart">
        <canvas id="chart-negative"></canvas>
        <div class="percent-text" id="percent-negative">0%</div>
        <div class="chart-label">Negative</div>
      </div>
    </div>
  </div>

  <div class="filter-buttons">
    <button class="filter-all active">All</button>
    <button class="filter-positive">Positive</button>
    <button class="filter-neutral">Neutral</button>
    <button class="filter-negative">Negative</button>
  </div>

  <% if(reviews.length === 0) { %>
    <div class="empty-state">
      <i class="fas fa-comment-slash fa-2x" style="color:#9ca3af; margin-bottom:10px;"></i>
      <h3>No Reviews Yet</h3>
      <p>No user reviews have been submitted yet.</p>
    </div>
  <% } else { %>
    <ul class="admin-review-list mt-3">
      <% reviews.forEach(review => { 
        let sentimentClass = '';
        if(review.sentiment.toLowerCase() === 'positive') sentimentClass='review-positive';
        else if(review.sentiment.toLowerCase() === 'neutral') sentimentClass='review-neutral';
        else if(review.sentiment.toLowerCase() === 'negative') sentimentClass='review-negative';
      %>
        <li class="review-card <%= sentimentClass %>">
          <div class="sentiment-badge"><%= review.sentiment %></div>
          <div class="review-message"><%= review.message %></div>
          <div class="review-meta">
            <div><i class="fas fa-user"></i> <%= review.user?.username || 'Unknown User' %></div>
            <div><i class="fas fa-clock"></i> <%= new Date(review.createdAt).toLocaleString() %></div>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const reviews = <%- JSON.stringify(reviews) %>;
function filterReviewsByDate(period, value){
  if(period === 'today'){
    const today = new Date();
    return reviews.filter(r=> new Date(r.createdAt).toDateString() === today.toDateString());
  } else if(period === 'month'){
    return reviews.filter(r=>{
      const d = new Date(r.createdAt);
      return d.getFullYear() === value.getFullYear() && d.getMonth() === value.getMonth();
    });
  } else if(period === 'year'){
    return reviews.filter(r=> new Date(r.createdAt).getFullYear() === value);
  }
  return reviews;
}
function updateCharts(filteredReviews){
  const total = filteredReviews.length;
  const counts = {
    positive: filteredReviews.filter(r=>r.sentiment.toLowerCase()==='positive').length,
    neutral: filteredReviews.filter(r=>r.sentiment.toLowerCase()==='neutral').length,
    negative: filteredReviews.filter(r=>r.sentiment.toLowerCase()==='negative').length
  };
  function createCircularChart(id, value, color){
    const ctx = document.getElementById(id).getContext('2d');
    if(window[id+'_chart']) window[id+'_chart'].destroy();
    window[id+'_chart'] = new Chart(ctx,{
      type:'doughnut',
      data:{labels:['Filled','Remaining'], datasets:[{data:[value,total-value], backgroundColor:[color,'#e5e5e5'], cutout:'70%', borderWidth:0}]},
      options:{plugins:{legend:{display:false}, tooltip:{enabled:false}}}
    });
    document.getElementById('percent-'+id.split('-')[1]).innerText = total===0?'0%':((value/total)*100).toFixed(1)+'%';
  }
  createCircularChart('chart-positive', counts.positive, getComputedStyle(document.documentElement).getPropertyValue('--primary').trim());
  createCircularChart('chart-neutral', counts.neutral, '#f59e0b');
  createCircularChart('chart-negative', counts.negative, '#dc2626');
}
updateCharts(reviews);

const periodSelect = document.getElementById('analytics-period');
const dateInput = document.getElementById('date-filter');
const monthInput = document.getElementById('month-filter');
const yearInput = document.getElementById('year-filter');
periodSelect.addEventListener('change', ()=>{
  dateInput.style.display = monthInput.style.display = yearInput.style.display = 'none';
  if(periodSelect.value==='today') dateInput.style.display='none';
  if(periodSelect.value==='month') monthInput.style.display='inline-block';
  if(periodSelect.value==='year') yearInput.style.display='inline-block';
  updateCharts(reviews);
});
dateInput.addEventListener('change', ()=>{ updateCharts(filterReviewsByDate('today', new Date(dateInput.value))); });
monthInput.addEventListener('change', ()=>{ updateCharts(filterReviewsByDate('month', new Date(monthInput.value))); });
yearInput.addEventListener('change', ()=>{ updateCharts(filterReviewsByDate('year', parseInt(yearInput.value))); });

const buttons = document.querySelectorAll('.filter-buttons button');
const reviewCards = document.querySelectorAll('.review-card');
buttons.forEach(btn=>{
  btn.addEventListener('click',()=>{
    buttons.forEach(b=>b.classList.remove('active'));
    btn.classList.add('active');
    const filter = btn.classList.contains('filter-positive')?'positive':
                   btn.classList.contains('filter-neutral')?'neutral':
                   btn.classList.contains('filter-negative')?'negative':'all';
    reviewCards.forEach(card=>{ card.style.display=(filter==='all'||card.classList.contains('review-'+filter))?'block':'none'; });
  });
});
</script>

