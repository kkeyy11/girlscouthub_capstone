<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<style>
/* ===== GENERAL PAGE LAYOUT ===== */
body {
    background: #eef3f7;
    font-family: "Inter", sans-serif;
}

.page-wrapper {
    display: flex;
    gap: 2rem;
    padding: 3rem 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

/* ===== CARD PANELS ===== */
.review-panel,
.event-panel {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 6px 16px rgba(0,0,0,0.08);
    border: 1px solid #e7e7e7;
    padding: 2rem;
}

/* REVIEW PANEL */
.review-panel {
    flex: 1 1 380px;
    max-width: 500px;
}

.review-panel h1,
.review-panel h2 {
    text-align: center;
    color: #1c352d;
    font-weight: 700;
    margin-bottom: 15px;
}

.review-panel p {
    text-align: center;
    color: #666;
    margin-bottom: 30px;
    font-size: 15px;
}

/* FORM */
.review-form textarea {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid #cfd4da;
    font-size: 15px;
    border-radius: 12px;
    resize: vertical;
    background: #fafafa;
    box-shadow: inset 0 2px 4px rgba(0,0,0,0.04);
    transition: 0.2s;
}

.review-form textarea:focus {
    border-color: #27ae60;
    background: #fff;
}

.review-form button {
    margin-top: 15px;
    padding: 12px 20px;
    border: none;
    background: #27ae60;
    color: #fff;
    border-radius: 12px;
    font-size: 16px;
    cursor: pointer;
    font-weight: 600;
    width: 100%;
    transition: 0.2s;
}

.review-form button:hover {
    background: #1f8b4e;
}

/* STAR RATING */
.star-rating {
    display: flex;
    justify-content: center;
    margin: 12px 0 18px;
    font-size: 2rem;
    cursor: pointer;
    gap: 6px;
}

.star-rating span {
    color: #d0d0d0;
    transition: 0.25s;
}

.star-rating span.selected {
    color: #ffc240;
}

.star-rating span.hover {
    color: #ffd77a;
}

/* SUBMITTED REVIEWS */
.review-list {
    margin-top: 25px;
    padding: 0;
}

.review-item {
    list-style: none;
    background: #fff;
    padding: 16px;
    margin-bottom: 15px;
    border-left: 5px solid #27ae60;
    border-radius: 12px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.06);
}

.submitted-stars {
    color: #ffc240;
    font-size: 1.3rem;
    margin-bottom: 6px;
    letter-spacing: 2px;
}

.review-item strong {
    font-size: 15px;
    color: #333;
}

.review-item small {
    color: #7b8b8c;
}

/* EVENT PANEL */
.event-panel {
    flex: 1 1 300px;
    max-width: 350px;
    max-height: 650px;
    overflow-y: auto;
    padding: 2rem;
}

.event-panel h2 {
    text-align: center;
    margin-bottom: 1rem;
    color: #1c352d;
    font-weight: 700;
}

.event-card {
    background: #f9fafb;
    padding: 14px;
    border-radius: 12px;
    margin-bottom: 18px;
    border-left: 5px solid #27ae60;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.event-card img {
    width: 100%;
    border-radius: 10px;
    margin-bottom: 10px;
}

.event-card p {
    margin: 6px 0;
    color: #444;
}

.event-card small {
    color: #758283;
    font-size: 13px;
}

/* RESPONSIVENESS */
@media (max-width: 900px) {
    .page-wrapper {
        flex-direction: column;
        padding: 1.5rem 1rem;
    }

    .review-panel,
    .event-panel {
        max-width: 90%;
        flex: 1 1 auto;
    }
}
</style>

<div class="page-wrapper">

    <!-- ========================= REVIEWS ========================= -->
    <div class="review-panel">
        <h1>User Reviews</h1>
        <p>Share your experience with GS HUB. Your feedback helps us improve!</p>

        <!-- REVIEW FORM -->
        <h2>Leave a Review</h2>

        <form method="POST" action="/user/reviews" class="review-form">
            <textarea 
                name="message" 
                rows="4" 
                placeholder="Write your thoughts..."
                required><%= reviews[0]?.message || '' %></textarea>

            <div class="star-rating" id="starRating">
                <% for(let i=1;i<=5;i++){ %>
                    <span data-value="<%= i %>" 
                          class="<%= i <= (reviews[0]?.rating || 5) ? 'selected' : '' %>">
                          &#9733;
                    </span>
                <% } %>
            </div>

            <input type="hidden" name="rating" id="ratingInput" value="<%= reviews[0]?.rating || 5 %>">

            <button type="submit"><%= reviews.length > 0 ? 'Update Review' : 'Submit Review' %></button>
        </form>

        <hr style="margin:35px 0; opacity:.3;">

        <!-- SUBMITTED REVIEWS -->
        <h2>Your Submitted Reviews</h2>

        <% if (reviews && reviews.length > 0) { %>
            <ul class="review-list">
                <% reviews.forEach(review => { %>
                    <li class="review-item">
                        <div class="submitted-stars">
                            <% for(let i=1;i<=5;i++){ %>
                                <%= i <= review.rating ? '⭐' : '☆' %>
                            <% } %>
                        </div>
                        <strong><%= review.message %></strong><br>
                        <small>Submitted on <%= new Date(review.createdAt).toLocaleString() %></small>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p style="text-align:center; color:#999;">You haven’t submitted any reviews yet.</p>
        <% } %>
    </div>

    <!-- ========================= EVENTS ========================= -->
    <div class="event-panel">
        <h2>Upcoming Events</h2>

        <% if (events && events.length > 0) { %>
            <% events.forEach(event => { %>
                <div class="event-card">
                    <% if (event.image) { %>
                        <img src="<%= event.image %>" alt="<%= event.title %>">
                    <% } %>
                    <strong><%= event.title %></strong>
                    <p><%= event.description %></p>
                    <small>
                        <%= new Date(event.date).toLocaleDateString() %> 
                        <%= event.time %> — 
                        <%= new Date(event.endDate).toLocaleDateString() %> 
                        <%= event.endTime %><br>
                        Location: <%= event.location %>
                    </small>
                </div>
            <% }) %>
        <% } else { %>
            <p style="text-align:center; color:#999;">No upcoming events available.</p>
        <% } %>
    </div>

</div>

<script>
const stars = document.querySelectorAll('#starRating span');
const ratingInput = document.getElementById('ratingInput');

stars.forEach(star => {
    star.addEventListener('click', () => {
        const value = star.dataset.value;
        ratingInput.value = value;

        stars.forEach(s => s.classList.remove('selected'));
        stars.forEach(s => {
            if (s.dataset.value <= value) s.classList.add('selected');
        });
    });

    star.addEventListener('mouseover', () => {
        const value = star.dataset.value;
        stars.forEach(s => s.classList.remove('hover'));
        stars.forEach(s => {
            if (s.dataset.value <= value) s.classList.add('hover');
        });
    });

    star.addEventListener('mouseout', () => {
        stars.forEach(s => s.classList.remove('hover'));
    });
});
</script>

