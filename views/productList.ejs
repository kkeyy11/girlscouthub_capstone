<!-- ==== CAROUSEL ==== -->
    <div class="carousel">
      <img src="/image/forproductheader.png" class="active" alt="Slide 1">
      <img src="/image/forproductheader2.png" alt="Slide 2">
      <!-- <img src="https://picsum.photos/id/1019/1000/300" alt="Slide 3"> -->
      <div class="controls">
        <button id="prev">&#10094;</button>
        <button id="next">&#10095;</button>
      </div>
      <div class="indicators">
        <span class="active"></span>
        <span></span>
        <span></span>
      </div>
    </div>

<section class="products-section">
  <div class="container">



    <!-- Categories + Search -->
<div class="categories">
  <a href="#">Twinkler</a>
  <a href="#">Star</a>
  <a href="#">Junior</a>
  <a href="#">Senior</a>
  <a href="#">Cadet</a>
</div>

    <!-- 🔍 Search Bar -->
    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="Search products...">
      <button onclick="searchProducts()"><i class="fas fa-search"></i></button>
    </div>

    <div class="section-header">
      <h2 class="section-title">Available Products</h2>
      <p class="section-subtitle">Browse through our carefully curated selection of premium scouting gear</p>
    </div>

    <ul class="card-container" id="productList">
      <% products.forEach(product => { %>
      <li class="card">
        <div class="card-img">
          <img src="<%= product.image || 'https://via.placeholder.com/240x140?text=' + product.name %>" alt="<%= product.name %>">
        </div>
        <div class="card-content">
          <div class="card-category"><%= product.category %></div>
          <div class="product-name"><%= product.name %></div>
          <div class="product-price">₱<%= product.price %></div>
          <div class="card-description"><%= product.description || 'No description provided.' %></div>

          <% if (product.quantity > 0) { %>
          <div class="button-group">
            <a href="/add-to-cart/<%= product._id %>" class="btn"><i class="fas fa-cart-plus"></i> Add to Cart</a>
            <a href="/add-to-cart/<%= product._id %>?redirect=cart" class="btn btn-secondary"><i class="fas fa-bookmark"></i> Reserve Now</a>
          </div>
          <% } else { %>
          <div class="out-of-stock"><i class="fas fa-times-circle"></i> Out of Stock</div>
          <% } %>
        </div>
      </li>
      <% }); %>
    </ul>
  </div>
</section>

<footer>
  <div class="container footer-container">
    <div class="footer-col">
      <h4>About Us</h4>
      <p>We provide Girl Scout gear and supplies for every adventure.</p>
    </div>
    <div class="footer-col">
      <h4>Contact</h4>
      <p><i class="fas fa-phone"></i> 0999-999-9999</p>
    </div>
  </div>
  <div class="copyright">
    © 2025 ShopNow. All Rights Reserved. | Designed with ❤️ for Girl Scouts
  </div>
</footer>

<!-- Floating Cart Button -->
<a href="/cart" class="cart-button"><i class="fas fa-shopping-cart"></i></a>

<script>
  function searchProducts() {
    const input = document.getElementById("searchInput").value.toLowerCase();
    const cards = document.querySelectorAll("#productList li.card");
    cards.forEach(card => {
      const name = card.querySelector(".product-name").innerText.toLowerCase();
      const category = card.querySelector(".card-category").innerText.toLowerCase();
      if (name.includes(input) || category.includes(input)) {
        card.style.display = "flex";
      } else {
        card.style.display = "none";
      }
    });
  }



  // ==== CAROUSEL FUNCTIONALITY ====
    const slides = document.querySelectorAll('.carousel img');
    const indicators = document.querySelectorAll('.carousel .indicators span');
    let current = 0;

    function showSlide(index) {
      slides.forEach((s, i) => {
        s.classList.toggle('active', i === index);
        indicators[i].classList.toggle('active', i === index);
      });
      current = index;
    }
    document.getElementById('prev').onclick = () => showSlide((current - 1 + slides.length) % slides.length);
    document.getElementById('next').onclick = () => showSlide((current + 1) % slides.length);
    indicators.forEach((dot, i) => dot.onclick = () => showSlide(i));

    setInterval(() => {
      showSlide((current + 1) % slides.length);
    }, 4000);

</script>

</body>
</html>





