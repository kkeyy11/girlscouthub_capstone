<%- include('./layouts/header') %>

<!-- ‚úÖ Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<main class="container mt-5">
  <h1 class="fw-bold text-success mb-4">Inventory Management</h1>

  <!-- ‚úÖ Flash messages -->
  <% if (messages.success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= messages.success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (messages.warning) { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= messages.warning %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- ‚úÖ Add new item form -->
  <div class="card shadow-sm rounded-4 mb-4">
    <div class="card-body">
      <h5 class="fw-bold mb-3">Add New Item</h5>
      <form action="/admin/inventory/create" method="POST" class="row g-3">
        <div class="col-md-4">
          <label for="itemName" class="form-label">Item Name</label>
          <input type="text" id="itemName" name="itemName" class="form-control" required>
        </div>
        <div class="col-md-4">
          <label for="quantity" class="form-label">Stocks</label>
          <input type="number" id="quantity" name="quantity" class="form-control" required>
        </div>
        <div class="col-md-4">
          <label for="price" class="form-label">Price</label>
          <input type="number" id="price" name="price" class="form-control" required>
        </div>
        <div class="col-12 text-end">
          <button type="submit" class="btn btn-success">‚ûï Add Item</button>
        </div>
      </form>
    </div>
  </div>

  <!-- ‚úÖ Current Inventory Table -->
  <div class="card shadow-sm rounded-4">
    <div class="card-body">
      <h5 class="fw-bold mb-3">Current Inventory</h5>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-success">
            <tr>
              <th>Item Name</th>
              <th>Quantity</th>
              <th>Price</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (inventory.length === 0) { %>
              <tr>
                <td colspan="4" class="text-center text-muted">No items in inventory</td>
              </tr>
            <% } else { %>
              <% inventory.forEach(item => { %>
                <tr>
                  <td><%= item.itemName %></td>
                  <td><%= item.quantity %></td>
                  <td>‚Ç±<%= item.price.toFixed(2) %></td>
                  <td class="text-center">
                    <!-- Update form -->
                    <form action="/admin/inventory/update" method="POST" class="d-inline-flex gap-2">
                      <input type="hidden" name="itemId" value="<%= item._id %>">
                      <input type="text" name="itemName" value="<%= item.itemName %>" class="form-control form-control-sm" required>
                      <input type="number" name="quantity" value="<%= item.quantity %>" class="form-control form-control-sm" required>
                      <input type="number" name="price" value="<%= item.price %>" class="form-control form-control-sm" required>
                      <button type="submit" class="btn btn-warning btn-sm">‚úèÔ∏è Update</button>
                    </form>

                    <!-- Delete button -->
                    <a href="/admin/inventory/delete/<%= item._id %>" 
                       class="btn btn-danger btn-sm ms-2" 
                       onclick="return confirm('Are you sure you want to delete this item?')">
                      üóë Delete
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<!-- ‚úÖ Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<%- include('./layouts/footer') %>
