<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }
        .report-container {
            width: 80%;
            margin: auto;
            padding: 20px;
            border: 1px solid #000;
            box-shadow: 2px 2px 10px gray;
            background: #fff;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .header h2 {
            margin: 0;
            font-size: 24px;
        }
        .header p {
            margin: 5px 0;
            font-size: 14px;
        }
        .date {
            text-align: right;
            margin-bottom: 20px;
            font-size: 14px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background: #f2f2f2;
        }
        .buttons {
            margin-top: 20px;
        }
        .buttons button {
            padding: 10px;
            margin: 5px;
            cursor: pointer;
            border: none;
            background: blue;
            color: white;
            font-size: 14px;
        }
        .buttons button:hover {
            background: darkblue;
        }
        @media print {
            .buttons {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="report-container">
        <div class="header">
            <h2>GIRL SCOUT SUPPLY REPORT</h2>
            <p>Mindoro Chapter</p>
            <p>Official Product Inventory Report</p>
        </div>
        
        <div class="date">
            <strong>Date Generated:</strong> <%= currentDate %>
        </div>

        <table>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Supplier</th>
            </tr>
            <% products.forEach((product, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.quantity %></td>
                    <td>‚Ç±<%= product.price %></td>
                    <td><%= product.supplier %></td>
                </tr>
            <% }); %>
        </table>

        <div class="buttons">
            <button onclick="window.print()">üñ®Ô∏è Print Report</button>
            <button onclick="exportToExcel()">üìÇ Export to Excel</button>
        </div>
    </div>

    <script>
        function exportToExcel() {
            let table = document.querySelector("table");
            let csv = [];
            for (let row of table.rows) {
                let rowData = [];
                for (let cell of row.cells) {
                    rowData.push(cell.innerText);
                }
                csv.push(rowData.join(","));
            }
            let csvContent = "data:text/csv;charset=utf-8," + csv.join("\n");
            let encodedUri = encodeURI(csvContent);
            let link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "product_report.csv");
            document.body.appendChild(link);
            link.click();
        }
    </script>

</body>
</html>
