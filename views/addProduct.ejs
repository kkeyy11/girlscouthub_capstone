<!DOCTYPE html>
<html>
<head>
  <title>Add Product</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    /* Base styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.6;
      background-color: #f8f9fa;
      color: #333;
      padding: 20px;
    }
    
    /* Container */
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    
    /* Heading */
    h2 {
      color: #2c3e50;
      margin-bottom: 25px;
      padding-bottom: 15px;
      font-size: 1.8rem;
      border-bottom: 2px solid #3498db;
      display: flex;
      align-items: center;
    }
    
    h2::before {
      content: "âž•";
      margin-right: 10px;
      font-size: 1.5rem;
    }
    
    /* Form container */
    .form-container {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      padding: 30px;
      margin-bottom: 30px;
    }
    
    /* Form group */
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-group:last-child {
      margin-bottom: 0;
    }
    
    /* Form label */
    .form-label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
      color: #2c3e50;
    }
    
    /* Form inputs */
    .form-input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 1rem;
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }
    
    .form-input:focus {
      outline: none;
      border-color: #3498db;
      box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
    }
    
    .form-input::placeholder {
      color: #95a5a6;
    }
    
    /* File input styling */
    .file-input-container {
      position: relative;
      margin-bottom: 20px;
    }
    
    .file-input-label {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      padding: 12px;
      background-color: #f1f8fe;
      border: 2px dashed #3498db;
      border-radius: 4px;
      color: #3498db;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    
    .file-input-label:hover {
      background-color: #e1f0fd;
    }
    
    .file-input-label::before {
      content: "ðŸ“·";
      margin-right: 10px;
      font-size: 1.2rem;
    }
    
    .file-input {
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0;
      width: 100%;
      height: 100%;
      cursor: pointer;
    }
    
    .file-name {
      margin-top: 8px;
      font-size: 0.9rem;
      color: #7f8c8d;
    }
    
    /* Form sections */
    .form-section {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 1px solid #ecf0f1;
    }
    
    .form-section:last-child {
      margin-bottom: 0;
      padding-bottom: 0;
      border-bottom: none;
    }
    
    .form-section-title {
      font-size: 1.2rem;
      color: #2c3e50;
      margin-bottom: 15px;
      font-weight: 600;
    }
    
    /* Form grid */
    .form-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }
    
    /* Submit button */
    .submit-button {
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 4px;
      padding: 14px 20px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.2s ease;
      width: 100%;
      margin-top: 20px;
    }
    
    .submit-button:hover {
      background-color: #2980b9;
    }
    
    /* Navigation link */
    .nav-link {
      display: inline-block;
      padding: 12px 20px;
      background-color: #34495e;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.2s ease;
      font-weight: 500;
    }
    
    .nav-link:hover {
      background-color: #2c3e50;
    }
    
    /* Required field indicator */
    .required::after {
      content: "*";
      color: #e74c3c;
      margin-left: 4px;
    }
    
    /* Responsive adjustments */
    @media (max-width: 768px) {
      .form-grid {
        grid-template-columns: 1fr;
      }
      
      .container {
        padding: 10px;
      }
      
      .form-container {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Add Product</h2>
    
    <div class="form-container">
      <form action="/add-product" method="POST" enctype="multipart/form-data">
        <!-- Image Upload Section -->
        <div class="form-section">
          <div class="form-section-title">Product Image</div>
          <div class="file-input-container">
            <label for="image" class="file-input-label">Choose Product Image</label>
            <input type="file" id="image" name="image" class="file-input" accept="image/*">
            <div class="file-name" id="file-name">No file chosen</div>
          </div>
        </div>
        
        <!-- Basic Information Section -->
        <div class="form-section">
          <div class="form-section-title">Basic Information</div>
          <div class="form-grid">
            <div class="form-group">
              <label for="name" class="form-label required">Product Name</label>
              <input type="text" id="name" name="name" class="form-input" required placeholder="Enter product name">
            </div>
            
            <div class="form-group">
              <label for="category" class="form-label required">Category</label>
              <select id="category" name="category" class="form-input" required>
                <option value="">-- Select Category --</option>
                <option value="Uniform">Uniform</option>
                <option value="Camping Gear">Camping Gear</option>
                <option value="Accessories">Accessories</option>
                <option value="Badges">Badges</option>
              </select>
            </div>
            
          
          <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-input" rows="3" placeholder="Enter product description"></textarea>
          </div>
        </div>
        
        <!-- Inventory Information Section -->
        <div class="form-section">
          <div class="form-section-title">Inventory Information</div>
          <div class="form-grid">
            <div class="form-group">
              <label for="quantity" class="form-label required">Quantity</label>
              <input type="number" id="quantity" name="quantity" class="form-input" required min="0" placeholder="Enter quantity">
            </div>
            
            <div class="form-group">
              <label for="price" class="form-label required">Price (â‚±)</label>
              <input type="number" id="price" name="price" step="0.01" class="form-input" required min="0" placeholder="Enter price">
            </div>
            
            <div class="form-group">
              <label for="supplier" class="form-label">Supplier</label>
              <input type="text" id="supplier" name="supplier" class="form-input" placeholder="Enter supplier name">
            </div>
            
            <div class="form-group">
              <label for="dateAcquired" class="form-label">Date Acquired</label>
              <input type="date" id="dateAcquired" name="dateAcquired" class="form-input">
            </div>
          </div>
        </div>
        
        <button type="submit" class="submit-button">Add Product</button>
      </form>
    </div>
    
    <!-- <a href="/products" class="nav-link">Back to Products</a> -->
  </div>
  
  <script>
    // Display file name when a file is selected
    document.getElementById('image').addEventListener('change', function() {
      const fileName = this.files[0] ? this.files[0].name : 'No file chosen';
      document.getElementById('file-name').textContent = fileName;
    });
  </script>
</body>
</html>