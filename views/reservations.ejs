<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
  main {
    margin-left: 220px;
    padding: 90px 20px 30px;
    min-height: 100vh;
    background: linear-gradient(to right top,#e6f9ea,#ccf5e1,#b2f1d8,#98edcf,#7fe9c6);
    box-sizing: border-box;
  }

  .table-container {
    max-width: 1250px;
    margin: 0 auto;
    overflow-x: auto;
    backdrop-filter: blur(10px);
  }

  .table-wrapper {
    background: rgba(255,255,255,0.9);
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    transition: transform 0.2s;
  }
  .table-wrapper:hover { transform: translateY(-2px); }

  table {
    border-radius: 10px;
    overflow: hidden;
  }

  thead {
    background: #059669;
    color: #ffffff;
    font-size: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  tbody tr:nth-child(odd) { background-color: #fdfdfd; }
  tbody tr:nth-child(even) { background-color: #ecf9ef; }

  tbody tr { transition: all 0.3s ease; }
  tbody tr:hover {
    background-color: #ccf5e1 !important;
    transform: scale(1.01);
    box-shadow: 0 6px 15px rgba(0,0,0,0.08);
  }

  tbody td {
    vertical-align: middle;
    font-size: 14px;
  }

  .badge {
    font-size: 0.85rem;
    font-weight: 600;
    padding: 0.45em 0.8em;
    transition: all 0.3s ease;
  }
  .badge:hover { transform: scale(1.1); box-shadow: 0 0 8px rgba(0,0,0,0.15); }

  .badge-pending { background: linear-gradient(45deg,#facc15,#fcd34d); color:#1f2937; }
  .badge-approved { background: linear-gradient(45deg,#10b981,#059669); color:#fff; }
  .badge-delivered { background: linear-gradient(45deg,#3b82f6,#2563eb); color:#fff; }
  .badge-cancelled { background: linear-gradient(45deg,#ef4444,#b91c1c); color:#fff; }
  .badge-collected { background: linear-gradient(45deg,#6366f1,#4f46e5); color:#fff; }

  .btn-sm { transition: transform 0.2s ease, background 0.2s ease; }
  .btn-sm:hover { transform: scale(1.1); }

  #searchBar, #statusFilter, #dateRange {
    border-radius: 8px;
    border: 1px solid #059669;
    padding-left: 2.5rem;
    transition: all 0.3s;
  }
  #searchBar:focus, #statusFilter:focus, #dateRange:focus {
    border-color: #10b981;
    box-shadow: 0 0 6px rgba(5,150,105,0.25);
  }
  #searchBar::placeholder { color: #6b7280; }

  h4.table-title {
    font-weight: 700;
    color: #059669;
  }

  @media (max-width: 768px) {
    main { margin-left: 0; padding: 100px 15px 30px; }
    thead { font-size: 13px; }
    tbody td { font-size: 13px; }
    #searchBar, #statusFilter, #dateRange { font-size: 13px; padding-left: 1.8rem; }
  }
</style>

<main>
  <div class="table-container">
    <div class="table-wrapper">

      <!-- Title -->
      <h4 class="table-title mb-4 d-flex align-items-center gap-2">
        <i class="fas fa-calendar-check"></i> Reservations
      </h4>

      <!-- Filters -->
      <div class="row g-2 mb-3 align-items-center">
        <div class="col-12 col-md-6 col-lg-4 position-relative">
          <i class="fas fa-search position-absolute" style="top:50%; left:10px; transform: translateY(-50%); color:#059669;"></i>
          <input type="text" id="searchBar" class="form-control" placeholder="Search...">
        </div>
        <div class="col-6 col-md-3 col-lg-2 ms-auto">
          <select id="dateRange" class="form-select">
            <option value="all">All Dates</option>
            <option value="today">Today</option>
            <option value="week">This Week</option>
            <option value="month">This Month</option>
          </select>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
          <select id="statusFilter" class="form-select">
            <option value="">All Status</option>
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Cancelled">Cancelled</option>
          </select>
        </div>
      </div>

      <!-- Table -->
      <% if (groupedReservations && Object.keys(groupedReservations).length > 0) { %>
      <div class="table-responsive">
        <table id="reservationsTable" class="table table-hover align-middle shadow-sm">
          <thead>
            <tr>
              <th>User</th>
              <th>Contact</th>
              <th>Email</th>
              <th>Items</th>
              <th>Date</th>
              <th>Proof</th>   <!-- â­  NEW COLUMN -->
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% Object.keys(groupedReservations).forEach(user => {
                 groupedReservations[user].forEach(r => { %>
                <tr data-user="<%= user %>" data-status="<%= r.status %>" data-date="<%= r.date %>">

                  <td><%= user %></td>
                  <td><%= r.contact %></td>
                  <td><%= r.email || 'N/A' %></td>

                  <td><%= r.items.map(item => `${item.name} (â‚±${item.price} x ${item.quantity})`).join(', ') %></td>

                  <td><%= r.date ? new Date(r.date).toLocaleDateString() : 'N/A' %></td>

                  <!-- â­ PROOF IMAGE PREVIEW -->
                  <td>
  <% if (r.proofOfPayment) { %>
    <a href="<%= r.proofOfPayment %>" target="_blank">
      <img src="<%= r.proofOfPayment %>" 
           style="width: 60px; height: 60px; object-fit: cover; border-radius: 6px; border: 1px solid #ccc;">
    </a>
  <% } else { %>
    <span class="text-muted">No Proof</span>
  <% } %>
</td>


                  <td>
                    <span class="badge rounded-pill
                      <% if (r.status === 'Pending') { %> badge-pending <% } %>
                      <% if (r.status === 'Approved') { %> badge-approved <% } %>
                      <% if (r.status === 'Delivered') { %> badge-delivered <% } %>
                      <% if (r.status === 'Cancelled') { %> badge-cancelled <% } %>
                      <% if (r.status === 'Collected') { %> badge-collected <% } %>">
                      <%= r.status %>
                    </span>
                  </td>

                  <td class="d-flex gap-1">
                    <form action="/approve/<%= r._id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-check"></i></button>
                    </form>
                    <form action="/remove/<%= r._id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                    </form>
                  </td>
                </tr>
            <% }) }) %>
          </tbody>
        </table>
      </div>

      <% } else { %>
        <div class="alert alert-secondary text-center py-4">
          <h5 class="mb-0">ðŸ“‹ No reservations found.</h5>
        </div>
      <% } %>

      <a href="/products" class="btn btn-dark mt-3">
        <i class="fas fa-arrow-left me-2"></i> Back to Products
      </a>

    </div>
  </div>
</main>

<script>
  const searchBar = document.getElementById('searchBar');
  const statusFilter = document.getElementById('statusFilter');
  const dateRange = document.getElementById('dateRange');
  const rows = document.querySelectorAll('#reservationsTable tbody tr');

  function isDateInRange(rowDate, range) {
    const today = new Date();
    const date = new Date(rowDate);
    const startOfWeek = new Date(today);
    startOfWeek.setDate(today.getDate() - today.getDay());
    const startOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);

    switch (range) {
      case 'today': return date.toDateString() === today.toDateString();
      case 'week': return date >= startOfWeek && date <= today;
      case 'month': return date >= startOfMonth && date <= today;
      default: return true;
    }
  }

  function filterTable() {
    const keyword = searchBar.value.toLowerCase();
    const status = statusFilter.value;
    const dateFilter = dateRange.value;

    rows.forEach(row => {
      const text = row.innerText.toLowerCase();
      const rowStatus = row.getAttribute('data-status');
      const rowDate = row.getAttribute('data-date');

      const matchKeyword = text.includes(keyword);
      const matchStatus = !status || rowStatus === status;
      const matchDate = isDateInRange(rowDate, dateFilter);

      row.style.display = (matchKeyword && matchStatus && matchDate) ? '' : 'none';
    });
  }

  [searchBar, statusFilter, dateRange].forEach(el => el.addEventListener('input', filterTable));
</script>

<%- include('./layouts/footer') %>
