<%- include('./layouts/header') %>
<style>
    /* Base styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.6;
      background-color: #f8f9fa;
      color: #333;
      padding: 20px;
    }
    
    /* Container */
    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 20px;
    }
    
    /* Heading */
    h1 {
      color: #2c3e50;
      margin-bottom: 25px;
      padding-bottom: 15px;
      font-size: 2rem;
      border-bottom: 2px solid #3498db;
      display: flex;
      align-items: center;
    }
    
    h1::before {
      content: "üìã";
      margin-right: 10px;
      font-size: 1.8rem;
    }
    
    /* Reservation cards */
    .reservations-list {
      display: grid;
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .reservation-card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      border-left: 5px solid #3498db;
    }
    
    .reservation-header {
      padding: 15px 20px;
      background-color: #f8f9fa;
      border-bottom: 1px solid #ecf0f1;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .customer-info {
      flex: 1;
    }
    
    .customer-name {
      font-size: 1.2rem;
      font-weight: 600;
      color: #2c3e50;
      margin-bottom: 5px;
    }
    
    .customer-contact {
      color: #7f8c8d;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .contact-item {
      display: flex;
      align-items: center;
    }
    
    .contact-item::before {
      margin-right: 5px;
      font-size: 0.9rem;
    }
    
    .phone::before {
      content: "üì±";
    }
    
    .email::before {
      content: "‚úâÔ∏è";
    }
    
    .reservation-date {
      background-color: #34495e;
      color: white;
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 0.8rem;
    }
    
    .reservation-body {
      padding: 20px;
    }
    
    /* Items list */
    .items-list {
      list-style-type: none;
      margin-bottom: 20px;
    }
    
    .item {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px dashed #ecf0f1;
    }
    
    .item:last-child {
      border-bottom: none;
    }
    
    .item-details {
      display: flex;
      flex-direction: column;
    }
    
    .item-name {
      font-weight: 500;
      color: #2c3e50;
    }
    
    .item-price {
      color: #27ae60;
      font-weight: 600;
      font-size: 0.9rem;
    }
    
    .item-quantity {
      background-color: #3498db;
      color: white;
      padding: 3px 8px;
      border-radius: 20px;
      font-size: 0.8rem;
    }
    
    /* Status section */
    .status-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 15px;
      border-top: 1px solid #ecf0f1;
    }
    
    .status-label {
      font-weight: 500;
      color: #2c3e50;
      margin-right: 10px;
    }
    
    .status-badge {
      padding: 5px 10px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 500;
    }
    
    .status-pending {
      background-color: #f39c12;
      color: white;
    }
    
    .status-approved {
      background-color: #2ecc71;
      color: white;
    }
    
    /* Approve button */
    .approve-form {
      display: inline-block;
    }
    
    .approve-button {
      background-color: #2ecc71;
      color: white;
      border: none;
      border-radius: 4px;
      padding: 8px 15px;
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.2s ease;
      margin-left: 10px;
    }
    
    .approve-button:hover {
      background-color: #27ae60;
    }
    
    /* Navigation link */
    .nav-link {
      display: inline-block;
      padding: 12px 20px;
      background-color: #34495e;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.2s ease;
      margin-top: 20px;
      font-weight: 500;
    }
    
    .nav-link:hover {
      background-color: #2c3e50;
    }
    
    /* Empty state */
    .empty-state {
      text-align: center;
      padding: 40px 20px;
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    .empty-state-icon {
      font-size: 3rem;
      margin-bottom: 20px;
      color: #95a5a6;
    }
    
    .empty-state-message {
      font-size: 1.2rem;
      color: #7f8c8d;
      margin-bottom: 20px;
    }
    
    /* Responsive adjustments */
    @media (max-width: 768px) {
      .reservation-header {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .reservation-date {
        margin-top: 10px;
      }
      
      .customer-contact {
        flex-direction: column;
        gap: 5px;
      }
      
      .status-section {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }
      
      .approve-button {
        margin-left: 0;
        margin-top: 10px;
      }
    }
    
    @media (max-width: 480px) {
      .container {
        padding: 10px;
      }
      
      h1 {
        font-size: 1.5rem;
      }
      
      .item {
        flex-direction: column;
      }
      
      .item-quantity {
        align-self: flex-start;
        margin-top: 5px;
      }
    }
    .remove-button {
    background-color: #e74c3c;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 15px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .remove-button:hover {
    background-color: #c0392b;
  }
</style>

<div class="container">
  <h1>Reserved Items</h1>
  
  <% if (reservations && reservations.length > 0) { %>
    <div class="reservations-list">
      <% reservations.forEach(r => { %>
        <div class="reservation-card">
          <div class="reservation-header">
            <div class="customer-info">
              <div class="customer-name"><%= r.name %></div>
              <div class="customer-contact">
                <span class="contact-item phone"><%= r.contact %></span>
                <% if (r.email) { %>
                  <span class="contact-item email"><%= r.email %></span>
                <% } %>
              </div>
            </div>
            <div class="reservation-date"><%= r.dateReserved.toDateString() %></div>
          </div>
          
          <div class="reservation-body">
            <ul class="items-list">
              <% 
                let total = 0;
                r.items.forEach(item => { 
                  total += item.price * item.quantity;
              %>
                <li class="item">
                  <div class="item-details">
                    <span class="item-name"><%= item.name %></span>
                    <span class="item-price">‚Ç±<%= item.price %></span>
                  </div>
                  <span class="item-quantity">Qty: <%= item.quantity %></span>
                </li>
              <% }); %>
            </ul>
            
            <div class="status-section">
              <div>
                <span class="status-label">Status:</span>
                <% if (r.status === 'Pending') { %>
                  <span class="status-badge status-pending"><%= r.status %></span>
                <% } else { %>
                  <span class="status-badge status-approved"><%= r.status %></span>
                <% } %>
              </div>
              
              <% if (r.status === 'Pending') { %>
                <form action="/approve/<%= r._id %>" method="POST" class="approve-form">
                  <button type="submit" class="approve-button">Approve Reservation</button>
                </form>
              <% } %>

              <!-- Remove button form -->
              <form action="/remove/<%= r._id %>" method="POST" style="display:inline;">
                <button type="submit" class="remove-button">Remove</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="empty-state">
      <div class="empty-state-icon">üìã</div>
      <p class="empty-state-message">No reservations found.</p>
    </div>
  <% } %>
  
  <a href="/products" class="nav-link">Back to Products</a>
</div>