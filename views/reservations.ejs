<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(to right top, #e6f9ea, #ccf5e1, #b2f1d8, #98edcf, #7fe9c6);
    margin: 0;
    color: #333;
  }

  main {
    margin-left: 220px;
    padding: 80px 30px 30px;
    min-height: 100vh;
  }

  .container {
    background: #ffffff;
    padding: 25px 35px;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    max-width: 100%;
    overflow-x: auto;
  }

  h1 {
    font-size: 1.6rem;
    color: #1f2937;
    margin-bottom: 20px;
    font-weight: 700;
    border-left: 6px solid #10b981;
    padding-left: 12px;
  }

  .filters {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .filters input,
  .filters select {
    padding: 10px;
    border-radius: 10px;
    border: 1px solid #ccc;
    font-size: 14px;
  }

  #searchBar {
    flex-grow: 1;
    border: 2px solid #10b981;
  }

  table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 10px;
    font-size: 14px;
  }

  thead th {
    background: #e0f2f1;
    padding: 12px;
    text-align: left;
    color: #065f46;
    font-weight: 600;
  }

  tbody tr {
    background: #ffffff;
    border-radius: 8px;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.03);
    transition: transform 0.2s ease;
  }

  tbody tr:hover {
    transform: scale(1.01);
  }

  tbody td {
    padding: 12px;
    vertical-align: middle;
    border-bottom: 1px solid #f0f0f0;
  }

  .status-pill {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 4px 12px;
    font-size: 0.75rem;
    border-radius: 999px;
    font-weight: 600;
    text-transform: capitalize;
  }

  .status-pending    { background: #fff3cd; color: #856404; }
  .status-approved   { background: #d4edda; color: #155724; }
  .status-delivered  { background: #eafaf1; color: #2ecc71; }
  .status-cancelled  { background: #fdecea; color: #e74c3c; }
  .status-collected  { background: #eaf1ff; color: #3498db; }

  .approve-button, .remove-button {
    padding: 8px 10px;
    font-size: 13px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 500;
    margin-right: 6px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .approve-button { background-color: #10b981; color: white; }
  .approve-button:hover { background-color: #059669; }

  .remove-button { background-color: #ef4444; color: white; }
  .remove-button:hover { background-color: #dc2626; }

  .empty-state {
    text-align: center;
    padding: 40px 20px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
  }

  .nav-link {
    display: inline-block;
    padding: 10px 20px;
    background-color: #374151;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    margin-top: 20px;
  }

  .nav-link:hover {
    background-color: #1f2937;
  }
</style>

<main>
  <div class="container">
    <h1>Reservations Table</h1>

  <div class="filters">
  <input type="text" id="searchBar" placeholder="üîç Search...">
  <select id="statusFilter">
    <option value="">All Status</option>
    <option value="Pending">üïí Pending</option>
    <option value="Approved">‚úÖ Approved</option>
    <option value="Cancelled">‚ùå Cancelled</option>
  </select>
  <select id="dateRange">
    <option value="all">All Dates</option>
    <option value="today">Today</option>
    <option value="week">This Week</option>
    <option value="month">This Month</option>
  </select>
</div>


    <% if (groupedReservations && Object.keys(groupedReservations).length > 0) { %>
      <table id="reservationsTable">
        <thead>
          <tr>
            <th>User</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Date</th>
            <th>Items</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% Object.keys(groupedReservations).forEach(user => {
               groupedReservations[user].forEach(r => { %>
              <tr data-user="<%= user %>" data-status="<%= r.status %>" data-date="<%= r.date %>">
                <td><%= user %></td>
                <td><%= r.contact %></td>
                <td><%= r.email || 'N/A' %></td>
                <td><%= r.date ? new Date(r.date).toLocaleDateString() : 'N/A' %></td>
                <td><%= r.items.map(item => `${item.name} (‚Ç±${item.price} x ${item.quantity})`).join(', ') %></td>
                <td>
                  <span class="status-pill status-<%= r.status.toLowerCase() %>">
                    <% if (r.status === 'Pending') { %><i class="fas fa-clock"></i><% } %>
                    <% if (r.status === 'Approved') { %><i class="fas fa-check-circle"></i><% } %>
                    <% if (r.status === 'Delivered') { %><i class="fas fa-box"></i><% } %>
                    <% if (r.status === 'Cancelled') { %><i class="fas fa-times-circle"></i><% } %>
                    <% if (r.status === 'Collected') { %><i class="fas fa-inbox"></i><% } %>
                    <%= r.status %>
                  </span>
                </td>
                <td>
                  <form action="/approve/<%= r._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="approve-button" title="Approve">
                      <i class="fas fa-check"></i>
                    </button>
                  </form>
                  <form action="/remove/<%= r._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="remove-button" title="Remove">
                      <i class="fas fa-trash-alt"></i>
                    </button>
                  </form>
                </td>
              </tr>
          <% }) }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="empty-state">
        <h3 style="color:#7f8c8d;">üìã No reservations found.</h3>
      </div>
    <% } %>
    <a href="/products" class="nav-link">Back to Products</a>
  </div>
</main>
<script>
  const searchBar = document.getElementById('searchBar');
  const statusFilter = document.getElementById('statusFilter');
  const dateRange = document.getElementById('dateRange');
  const rows = document.querySelectorAll('#reservationsTable tbody tr');

  function isDateInRange(rowDate, range) {
    const today = new Date();
    const date = new Date(rowDate);
    const startOfWeek = new Date(today);
    startOfWeek.setDate(today.getDate() - today.getDay());
    const startOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);

    switch (range) {
      case 'today':
        return date.toDateString() === today.toDateString();
      case 'week':
        return date >= startOfWeek && date <= today;
      case 'month':
        return date >= startOfMonth && date <= today;
      default:
        return true;
    }
  }

  function filterTable() {
    const keyword = searchBar.value.toLowerCase();
    const status = statusFilter.value;
    const dateFilter = dateRange.value;

    rows.forEach(row => {
      const text = row.innerText.toLowerCase();
      const rowStatus = row.getAttribute('data-status');
      const rowDate = row.getAttribute('data-date');

      const matchKeyword = text.includes(keyword);
      const matchStatus = !status || rowStatus === status;
      const matchDate = isDateInRange(rowDate, dateFilter);

      if (matchKeyword && matchStatus && matchDate) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  }

  [searchBar, statusFilter, dateRange].forEach(el => {
    el.addEventListener('input', filterTable);
  });
</script>
