<%- include('./layouts/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Low Stock Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    h1 {
      color: #e74c3c;
      font-weight: 700;
    }
    .table thead th {
      background-color: #e74c3c;
      color: #fff;
      text-transform: uppercase;
      font-size: 0.9rem;
    }
    .product-price {
      font-weight: 600;
      color: #27ae60;
    }
    .product-quantity {
      font-weight: 700;
      color: #e74c3c;
    }
    .btn-success {
      background: #2ecc71;
      border: none;
    }
    .btn-success:hover {
      background: #27ae60;
    }
    .empty-state {
      padding: 40px 20px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .empty-state i {
      font-size: 3rem;
      color: #7f8c8d;
    }
    .back-link {
      display: inline-block;
      margin-top: 20px;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <h1 class="mb-4">
      <i class="fas fa-exclamation-triangle me-2"></i> Low Stock Products
    </h1>

    <% if (products.length > 0) { %>
      <div class="table-responsive shadow-sm rounded">
        <table class="table align-middle mb-4">
          <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(p => { %>
              <tr>
                <td class="fw-semibold text-dark"><%= p.name %></td>
                <td class="product-price">â‚±<%= p.price %></td>
                <td class="product-quantity"><%= p.quantity %></td>
                <td>
                  <form action="/add-stock/<%= p._id %>" method="POST" class="d-flex gap-2">
                    <input type="number" name="addQty" min="1" placeholder="Add Qty" required class="form-control form-control-sm" style="max-width:100px;">
                    <button type="submit" class="btn btn-success btn-sm">
                      <i class="fas fa-plus me-1"></i> Add Stock
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-state text-center">
        <i class="fas fa-check-circle mb-3"></i>
        <p class="text-muted fs-5">Great! No products are low in stock.</p>
      </div>
    <% } %>

    <a href="/manage-products" class="btn btn-dark back-link">
      <i class="fas fa-arrow-left me-2"></i> Back to Product Management
    </a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<%- include('./layouts/footer') %>
