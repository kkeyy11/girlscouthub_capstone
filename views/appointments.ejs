<%- include('./layouts/header') %>

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #eaf6e5;
    color: #333;
    margin: 0;
    padding: 0 20px;
  }

  h1, h2 {
    text-align: center;
    color: #388e3c;
    margin-top: 20px;
  }

  .appointment-table {
    width: 100%;
    max-width: 900px;
    margin: 20px auto;
    border-collapse: collapse;
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .appointment-table th, .appointment-table td {
    padding: 12px 15px;
    border: 1px solid #c8e6c9;
    text-align: center;
  }

  .appointment-table th {
    background-color: #c8e6c9;
    color: #388e3c;
    font-weight: bold;
  }

  .btn-danger {
    background-color: #f44336;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
  }

  .btn-danger:hover {
    background-color: #d32f2f;
  }

  .new-appointment {
    margin: 40px auto;
    text-align: center;
    max-width: 600px;
    background-color: #f1f9f1;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .new-appointment form {
    text-align: left;
  }

  .new-appointment label {
    font-weight: bold;
    color: #388e3c;
    display: block;
    margin: 10px 0 5px;
  }

  .new-appointment input,
  .new-appointment select {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 5px;
    border: 1px solid #c8e6c9;
  }

  .new-appointment button {
    width: 100%;
    background-color: #66bb6a;
    color: white;
    padding: 12px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
  }

  .new-appointment button:hover {
    background-color: #388e3c;
  }

</style>

<h1>ðŸ“‹ My Appointments</h1>

<!-- Appointment Table -->
<table class="appointment-table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Description</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% appointments.forEach(appointment => { %>
      <tr>
        <td><%= appointment.date %></td>
        <td><%= appointment.time %></td>
        <td><%= appointment.description %></td>
        <td><%= appointment.status %></td>
        <td>
          <% if (appointment.status === 'Pending') { %>
            <form action="/user/appointments/delete/<%= appointment._id %>" method="POST">
              <button type="submit" class="btn btn-danger">Cancel</button>
            </form>
          <% } else { %>
            <em>N/A</em>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<!-- New Appointment Form -->
<div class="new-appointment">
  <h2>Book a New Appointment</h2>
  <form action="/user/appointments" method="POST">
    <label>Date:
      <input type="date" name="date" required>
    </label>
    <label>Time:
      <select name="time" required>
        <% const hours = ['08:00 AM', '09:00 AM', '10:00 AM', '11:00 AM', '12:00 PM', '01:00 PM', '02:00 PM', '03:00 PM', '04:00 PM']; %>
        <% hours.forEach(h => { %>
          <option value="<%= h %>"><%= h %></option>
        <% }) %>
      </select>
    </label>
    <label>Description:
      <input type="text" name="description" required>
    </label>
    <button type="submit">âž• Add Appointment</button>
  </form>
</div>

<%- include('./layouts/footer') %>
