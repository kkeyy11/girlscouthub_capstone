            <li><a href="/user/appointments" class="active">üìÖ Appointments</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <h1 class="title">My Appointments</h1>

        <% if (appointments.length > 0) { %>
            <table class="appointments-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach(appointment => { %>
                        <tr>
                            <td><%= appointment.date.toDateString() %></td>
                            <td><%= appointment.time %></td>
                            <td><%= appointment.description %></td>
                            <td>
                                <form action="/user/appointments/delete/<%= appointment._id %>" method="POST">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %> 
            <p class="no-appointment">No appointments scheduled. Book one below!</p>

            <!-- Booking Form -->
            <h2>Book a New Appointment</h2>
            <form action="/user/appointments" method="POST" class="appointment-form">
                <label>Date:</label>
                <input type="date" name="date" required>

                <label>Time:</label>
                <select name="time" required>
                    <option value="08:00 AM">08:00 AM</option>
                    <option value="09:00 AM">09:00 AM</option>
                    <option value="10:00 AM">10:00 AM</option>
                    <option value="11:00 AM">11:00 AM</option>
                    <option value="01:00 PM">01:00 PM</option>
                    <option value="02:00 PM">02:00 PM</option>
                    <option value="03:00 PM">03:00 PM</option>
                    <option value="04:00 PM">04:00 PM</option>
                </select>

                <label>Description:</label>
                <textarea name="description" required></textarea>

                <button type="submit" class="submit-btn">Add Appointment</button>
            </form>
        <% } %>
    </div>
