<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
body {
  font-family: 'Inter', sans-serif;
  background: #f3f4f6;
  margin: 0;
  color: #333;
}

/* üåü Form wrapper positioned below navbar */
.appointment-wrapper {
  display: flex;
  justify-content: center;
  padding: 120px 10px 40px; /* Adjust top padding so form is below navbar */
}

.appointment-card {
  width: 100%;
  max-width: 400px; /* smaller width */
  background: #fff;
  border-radius: 14px;
  padding: 20px 18px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.page-header {
  text-align: center;
  margin-bottom: 12px;
}

.page-header h1 {
  font-size: 1.4rem;
  font-weight: 700;
  color: #059669;
  margin-bottom: 2px;
}

.page-header p {
  font-size: 0.8rem;
  color: #4b5563;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  margin-bottom: 4px;
  color: #1f2937;
  font-size: 0.8rem;
}

.section-title i {
  width: 18px;
  height: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  background: #10b981;
  border-radius: 5px;
  font-size: 9px;
}

input[type="date"], textarea {
  width: 100%;
  padding: 8px 10px;
  border-radius: 7px;
  border: 1.2px solid #d1d5db;
  font-size: 12px;
  background: #f9fafb;
  transition: all 0.3s;
  resize: none;
}

input[type="date"]:focus, textarea:focus {
  outline: none;
  border-color: #10b981;
  background: #fff;
  box-shadow: 0 0 0 2px rgba(16,185,129,0.15);
}

.time-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6px;
  margin-bottom: 8px;
}

.time-slot {
  padding: 6px 0;
  text-align: center;
  background: #f3f4f6;
  border: 1px solid #d1d5db;
  border-radius: 7px;
  font-size: 11px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.time-slot:hover, .time-slot.active {
  background: #10b981;
  color: #fff;
  border-color: #059669;
}

.submit-button {
  width: 100%;
  padding: 10px 0;
  border-radius: 50px;
  background: #059669;
  color: white;
  font-weight: 600;
  font-size: 13px;
  border: none;
  cursor: pointer;
  transition: all 0.2s;
}

.submit-button:hover {
  transform: translateY(-1px);
  box-shadow: 0 5px 15px rgba(16,185,129,0.25);
}

@media (max-width: 400px) {
  .time-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
</style>

<div class="appointment-wrapper">
  <div class="appointment-card">
    <h2>Book Appointment</h2>

    <!-- ‚úÖ FIXED FORM (method + action added) -->
    <form id="appointmentForm" method="POST" action="/user/appointments">

      <label>Date</label>
      <input type="date" name="date" id="date" required>

      <label>Time</label>
      <div class="time-grid">
        <% const times = ['09:00 am','10:00 am','11:00 am','12:00 nn','01:00 pm','02:00 pm','03:00 pm','04:00 pm','05:00 pm']; %>
        <% times.forEach(time => { %>
          <div class="time-slot" onclick="selectTime('<%= time %>', event)">
            <%= time %>
          </div>
        <% }) %>
      </div>

      <!-- ‚úÖ ADDED: hidden input REQUIRED for backend -->
      <input type="hidden" name="time" id="selectedTime" required>

      <label>Reason</label>
      <textarea name="description" required></textarea>

      <button type="submit">Submit</button>
    </form>

    <!-- ‚úÖ ‚úÖ ‚úÖ ADDED: USER APPOINTMENT LIST -->
    <% if (appointments && appointments.length > 0) { %>
      <hr style="margin:20px 0;">

      <h3>Your Appointments</h3>

      <% appointments.forEach(app => { %>
        <div style="font-size:13px;margin-bottom:8px;">
          üìÖ <%= new Date(app.date).toDateString() %> |
          üïí <%= app.time %> |
          üè∑ <%= app.status %>

          <% if (app.status === 'Pending') { %>
            <!-- ‚úÖ CANCEL BUTTON -->
            <form method="POST"
                  action="/user/appointments/delete/<%= app._id %>"
                  style="display:inline;">
              <button style="font-size:11px;">Cancel</button>
            </form>
          <% } %>
        </div>
      <% }) %>
    <% } %>

  </div>
</div>

<script>
/* ‚úÖ SAME UI JS ‚Äì NO FORM BLOCKING */
function selectTime(time, event) {
  document.querySelectorAll('.time-slot').forEach(t => t.classList.remove('active'));
  event.target.classList.add('active');
  document.getElementById('selectedTime').value = time;
}

/* ‚úÖ ADDED: simple validation */
document.getElementById('appointmentForm').addEventListener('submit', function(e) {
  if (!document.getElementById('selectedTime').value) {
    e.preventDefault();
    alert('Please select time');
  }
});
</script>

<%- include('./layouts/footer') %>
