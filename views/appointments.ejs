<%- include('./layouts/header') %>
<%- include('./layouts/navbar') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
body {
  font-family: 'Inter', sans-serif;
  background: #f3f4f6;
  margin: 0;
  color: #333;
}

/* ðŸŒŸ Form wrapper positioned below navbar */
.appointment-wrapper {
  display: flex;
  justify-content: center;
  padding: 120px 10px 40px; /* Adjust top padding so form is below navbar */
}

.appointment-card {
  width: 100%;
  max-width: 400px; /* smaller width */
  background: #fff;
  border-radius: 14px;
  padding: 20px 18px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.page-header {
  text-align: center;
  margin-bottom: 12px;
}

.page-header h1 {
  font-size: 1.4rem;
  font-weight: 700;
  color: #059669;
  margin-bottom: 2px;
}

.page-header p {
  font-size: 0.8rem;
  color: #4b5563;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  margin-bottom: 4px;
  color: #1f2937;
  font-size: 0.8rem;
}

.section-title i {
  width: 18px;
  height: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  background: #10b981;
  border-radius: 5px;
  font-size: 9px;
}

input[type="date"], textarea {
  width: 100%;
  padding: 8px 10px;
  border-radius: 7px;
  border: 1.2px solid #d1d5db;
  font-size: 12px;
  background: #f9fafb;
  transition: all 0.3s;
  resize: none;
}

input[type="date"]:focus, textarea:focus {
  outline: none;
  border-color: #10b981;
  background: #fff;
  box-shadow: 0 0 0 2px rgba(16,185,129,0.15);
}

.time-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6px;
  margin-bottom: 8px;
}

.time-slot {
  padding: 6px 0;
  text-align: center;
  background: #f3f4f6;
  border: 1px solid #d1d5db;
  border-radius: 7px;
  font-size: 11px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.time-slot:hover, .time-slot.active {
  background: #10b981;
  color: #fff;
  border-color: #059669;
}

.submit-button {
  width: 100%;
  padding: 10px 0;
  border-radius: 50px;
  background: #059669;
  color: white;
  font-weight: 600;
  font-size: 13px;
  border: none;
  cursor: pointer;
  transition: all 0.2s;
}

.submit-button:hover {
  transform: translateY(-1px);
  box-shadow: 0 5px 15px rgba(16,185,129,0.25);
}

@media (max-width: 400px) {
  .time-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
</style>

<div class="appointment-wrapper">
  <div class="appointment-card">
    <div class="page-header">
      <h1><i class="fas fa-calendar-check"></i> Book Appointment</h1>
      <p>Select a date, time, and reason</p>
    </div>

    <form id="appointmentForm" onsubmit="return submitAppointment(event)">
      <div>
        <div class="section-title"><i class="fas fa-calendar-alt"></i> Date</div>
        <input type="date" id="date" name="date" required>
      </div>

      <div>
        <div class="section-title"><i class="fas fa-clock"></i> Time</div>
        <div class="time-grid">
          <% const times = ['09:00','10:00','11:00','12:00','01:00','02:00','03:00','04:00','05:00']; %>
          <% times.forEach(time => { %>
            <div class="time-slot" onclick="selectTime('<%= time %>', event)"><%= time %></div>
          <% }) %>
        </div>
        <input type="hidden" id="selectedTime" name="time">
      </div>

      <div>
        <div class="section-title"><i class="fas fa-comment-dots"></i> Reason</div>
        <textarea id="description" name="description" rows="2" placeholder="Enter reason..." required></textarea>
      </div>

      <button type="submit" class="submit-button"><i class="fas fa-paper-plane"></i> Submit</button>
    </form>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const dateInput = document.getElementById('date');
  const today = new Date().toISOString().split('T')[0];
  dateInput.min = today;
});

function selectTime(time, event) {
  document.querySelectorAll('.time-slot').forEach(slot => slot.classList.remove('active'));
  event.currentTarget.classList.add('active');
  document.getElementById('selectedTime').value = time;
}

function submitAppointment(e) {
  e.preventDefault();
  const date = document.getElementById('date').value;
  const time = document.getElementById('selectedTime').value;
  const desc = document.getElementById('description').value;

  if(!date || !time || !desc.trim()) {
    alert("Please complete all fields.");
    return false;
  }

  alert(`Appointment booked on ${date} at ${time}`);
  document.getElementById('appointmentForm').reset();
  document.querySelectorAll('.time-slot').forEach(s => s.classList.remove('active'));
  return false;
}
</script>

