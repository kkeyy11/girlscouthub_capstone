<!-- JS for Philippine Time & Toast -->
<script>
  // Convert time to Philippine time (GMT+8)
  document.querySelectorAll(".ph-time").forEach(td => {
    const serverTime = td.textContent.trim();
    const date = new Date("1970-01-01T" + serverTime + "Z");
    const phTime = new Intl.DateTimeFormat('en-PH', {
      hour: 'numeric',
      minute: 'numeric',
      hour12: true,
      timeZone: 'Asia/Manila'
    }).format(date);
    td.textContent = phTime;
  });

  function showToastAndSubmit(form, message, bgColorClass) {
    const toast = form.querySelector('#actionToast');
    const toastMessage = toast.querySelector('#toastMessage');
    const lightbox = document.getElementById('lightbox');
    const lightboxMessage = document.getElementById('lightboxMessage');

    // Set message in toast
    toastMessage.textContent = message;
    toast.className = `toast align-items-center text-white ${bgColorClass} border-0 show`;
    toast.style.display = 'block';

    // Set message in lightbox
    lightboxMessage.textContent = message;
    lightbox.style.display = 'flex';

    // Force reflow to apply new styles (optional but helps with animations)
    void toast.offsetWidth;

    setTimeout(() => {
      toast.style.display = 'none'; // Hide after showing
      lightbox.style.display = 'none'; // Hide lightbox
      form.submit();
    }, 2000);
  }

  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.status-action-form').forEach(form => {
      form.addEventListener('submit', function (e) {
        e.preventDefault();
        const actionType = form.dataset.action;
        let message;
        let bgColor;

        if (actionType === 'Confirmed') {
          message = 'Appointment Confirmed! User Approved!';
          bgColor = 'bg-success';
        } else if (actionType === 'Cancelled') {
          message = 'Appointment Cancelled!';
          bgColor = 'bg-danger';
        } else {
          message = 'Status Updated!';
          bgColor = 'bg-warning';
        }

        showToastAndSubmit(this, message, bgColor);
      });
    });
  });
</script>

