<h1 class="table-title"><i class="fas fa-calendar-check"></i> Appointment List</h1>
<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th><i class="fas fa-user"></i> User</th>
        <th><i class="fas fa-calendar-alt"></i> Date</th>
        <th><i class="fas fa-clock"></i> Time </th>
        <th><i class="fas fa-info-circle"></i> Status</th>
        <th><i class="fas fa-cogs"></i> Action</th>
      </tr>
    </thead>
    <tbody>
      <% appointments.forEach(appointment => { %>
        <tr>
          <td><%= appointment.user.email %></td>
          <td><%= new Date(appointment.date).toISOString().slice(0, 10) %></td>
          <td class="ph-time"><%= appointment.time %></td>
          <td><%= appointment.status %></td>
          <td>
            <form action="/admin/appointments/update-status/<%= appointment._id %>/Confirmed" method="POST" class="status-action-form" data-action="Confirmed" style="display: inline;">
              <button type="submit" class="status-btn confirm" title="Confirm">
                <i class="fas fa-check"></i>
              </button>
            </form>
            <form action="/admin/appointments/update-status/<%= appointment._id %>/Cancelled" method="POST" class="status-action-form" data-action="Cancelled" style="display: inline;">
              <button type="submit" class="status-btn cancel" title="Cancel">
                <i class="fas fa-times"></i>
              </button>
            </form>
            <!-- Toast next to the action buttons -->
            <div class="toast-wrapper">
              <div class="toast align-items-center text-white bg-success border-0" id="actionToast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex justify-content-center p-3">
                  <span id="toastMessage"></span>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

