<%- include('./layouts/header') %>

<main>
    <h1>Create District</h1>
    <form action="create" method="POST">
        <div class="form-group">
            <label for="districtName">District Name:</label>
            <input type="text" id="districtName" name="name" required>
        </div>
        
        <!-- Add description field -->
        <div class="form-group">
            <label for="districtDescription">District Description:</label>
            <textarea id="districtDescription" name="description" required></textarea>
        </div>
        
        <button type="submit" class="btn btn-submit">Save District</button>
    </form>
</main>

